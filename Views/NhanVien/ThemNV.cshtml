@model QL_Luong_MVC.Models.NhanVien
@{
    ViewBag.Title = "SuaNV";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mt-3">🛠️ Sửa thông tin nhân viên</h2>

@using (Html.BeginForm("SuaNV", "NhanVien", FormMethod.Post))
{
    @Html.HiddenFor(m => m.IDNhanVien)

    <div class="form-horizontal mt-4">

        <div class="form-group">
            <label>Họ tên</label>
            @Html.TextBoxFor(m => m.FullNameNhanVien, new { @class = "form-control", placeholder = "Nhập họ tên..." })
        </div>

        <div class="form-group mt-2">
            <label>Ngày sinh</label>
            @Html.TextBoxFor(m => m.DayOfBirth_NhanVien, new { @class = "form-control", type = "date" })
        </div>

        <div class="form-group mt-2">
            <label>Giới tính</label>
            @Html.DropDownListFor(m => m.Sex_NhanVien,
                new SelectList(new[] { "Nam", "Nữ" }, Model.Sex_NhanVien),
                "-- Chọn giới tính --",
                new { @class = "form-control" })
        </div>

        <div class="form-group mt-2">
            <label>Địa chỉ</label>
            @Html.TextBoxFor(m => m.Address_NhanVien, new { @class = "form-control", placeholder = "Nhập địa chỉ..." })
        </div>

        <div class="form-group mt-2">
            <label>Số điện thoại</label>
            @Html.TextBoxFor(m => m.SDT_NhanVien, new { @class = "form-control", placeholder = "Nhập số điện thoại..." })
        </div>

        <div class="form-group mt-2">
            <label>Email</label>
            @Html.TextBoxFor(m => m.Email_NhanVien, new { @class = "form-control", placeholder = "Nhập email..." })
        </div>

        <div class="form-group mt-2">
            <label>Trạng thái</label>
            @Html.DropDownListFor(m => m.State_NhanVien,
                new SelectList(new[] { "Đang làm", "Tạm nghỉ", "Đã nghỉ" }, Model.State_NhanVien),
                "-- Chọn trạng thái --",
                new { @class = "form-control" })
        </div>

        <div class="form-group mt-2">
            <label>Chức vụ (Mã CV)</label>
            @Html.TextBoxFor(m => m.IDCV_NhanVien, new { @class = "form-control", placeholder = "Nhập mã chức vụ..." })
        </div>

        <div class="form-group mt-2">
            <label>Phòng ban (Mã PB)</label>
            @Html.TextBoxFor(m => m.IDPB_NhanVien, new { @class = "form-control", placeholder = "Nhập mã phòng ban..." })
        </div>

        <div class="form-group mt-4 text-center">
            <button type="submit" class="btn btn-primary px-4">Lưu thay đổi</button>
            <a href="@Url.Action("DanhSachNV", "NhanVien")" class="btn btn-secondary px-4 ms-2">Quay lại</a>
        </div>

        @if (ViewBag.ThongBao != null)
        {
            <div class="alert alert-info text-center mt-3">@ViewBag.ThongBao</div>
        }
    </div>
}
