@model QL_Luong_MVC.Models.NhanVien
@{
    ViewBag.Title = "Thêm nhân viên mới";
}

<style>
    /* CSS Form Thêm NV */
    .add-nv-card {
        border: none;
        border-radius: 20px;
        /* Nền kính mờ 30% */
        background-color: var(--color-content-bg) !important;
        backdrop-filter: blur(10px);
        box-shadow: 0 8px 30px rgba(106, 13, 173, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.5);
    }

    .add-nv-header {
        /* Gradient Tím 30% */
        background: var(--color-sidebar-bg) !important;
        color: white;
        border-radius: 20px 20px 0 0;
        padding: 1.5rem;
        text-align: center;
    }

    .form-label-purple {
        color: #6A0DAD;
        font-weight: 700;
        margin-bottom: 5px;
        display: block;
    }

    .form-control-purple {
        border-radius: 10px;
        border: 1px solid rgba(106, 13, 173, 0.3);
        padding: 12px;
        transition: 0.3s;
    }

        .form-control-purple:focus {
            border-color: #7B68EE;
            box-shadow: 0 0 8px rgba(123, 104, 238, 0.4);
        }

    /* Nút Thêm (Vàng Nhấn) */
    .btn-add-accent {
        background-color: var(--color-accent) !important;
        border-color: var(--color-accent) !important;
        color: var(--color-text-dark-purple) !important;
        font-weight: 700;
        padding: 12px 40px;
        border-radius: 10px;
        transition: 0.3s;
    }

        .btn-add-accent:hover {
            background-color: var(--color-accent-hover) !important;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.4);
        }
</style>

<div class="container-fluid py-5">
    <div class="card add-nv-card mx-auto shadow-lg" style="max-width: 900px;">

        <div class="add-nv-header">
            <h3 class="mb-0 fw-bold"><i class="fas fa-user-plus me-2"></i> Tiếp nhận nhân sự mới</h3>
        </div>

        <div class="card-body p-5">
            @if (ViewBag.ThongBao != null)
            {
                <div class="alert alert-info text-center mb-4 shadow-sm" style="border-radius: 10px;">
                    <i class="fas fa-info-circle me-2"></i> @ViewBag.ThongBao
                </div>
            }

            @using (Html.BeginForm("ThemNV", "NhanVien", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="row g-4">
                    <!-- Cột Trái -->
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label-purple"><i class="fas fa-signature"></i> Họ và tên</label>
                            @Html.TextBoxFor(m => m.FullNameNhanVien, new { @class = "form-control form-control-purple", placeholder = "Ví dụ: Nguyễn Văn A", required = "required" })
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label-purple"><i class="fas fa-birthday-cake"></i> Ngày sinh</label>
                            <input type="date" name="DayOfBirth_NhanVien" class="form-control form-control-purple" required />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label-purple"><i class="fas fa-venus-mars"></i> Giới tính</label>
                            <select name="Sex_NhanVien" class="form-control form-control-purple">
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label-purple"><i class="fas fa-map-marker-alt"></i> Địa chỉ</label>
                            @Html.TextBoxFor(m => m.Address_NhanVien, new { @class = "form-control form-control-purple", placeholder = "Nhập địa chỉ thường trú" })
                        </div>
                    </div>

                    <!-- Cột Phải -->
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label-purple"><i class="fas fa-phone"></i> Điện thoại</label>
                            @Html.TextBoxFor(m => m.SDT_NhanVien, new { @class = "form-control form-control-purple", placeholder = "09xxxxxxxx" })
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label-purple"><i class="fas fa-envelope"></i> Email</label>
                            @Html.TextBoxFor(m => m.Email_NhanVien, new { @class = "form-control form-control-purple", type = "email", placeholder = "email@company.com" })
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label-purple"><i class="fas fa-id-badge"></i> Chức vụ</label>
                                @if (ViewBag.DSChucVu != null)
                                {
                                    @Html.DropDownListFor(m => m.IDCV_NhanVien,
                                        new SelectList(ViewBag.DSChucVu, "IDChucVu", "NameChucVu"),
                                        "-- Chọn chức vụ --",
                                        new { @class = "form-control form-control-purple", required = "required" })
                                }
                                else
                                {
                                    <input type="text" class="form-control" value="Lỗi: Không tải được danh sách CV" disabled />
                                }
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label-purple"><i class="fas fa-building"></i> Phòng ban</label>
                                @if (ViewBag.DSPhongBan != null)
                                {
                                    @Html.DropDownListFor(m => m.IDPB_NhanVien,
                                        new SelectList(ViewBag.DSPhongBan, "IDPhongBan", "NamePhongBan"),
                                        "-- Chọn phòng ban --",
                                        new { @class = "form-control form-control-purple", required = "required" })
                                }
                                else
                                {
                                    <input type="text" class="form-control" value="Lỗi: Không tải được danh sách PB" disabled />
                                }
                            </div>
                        </div>                        <div class="form-group mb-3">
                            <label class="form-label-purple"><i class="fas fa-toggle-on"></i> Trạng thái</label>
                            <select name="State_NhanVien" class="form-control form-control-purple">
                                <option value="Đang làm">Đang làm</option>
                                <option value="Thử việc">Thử việc</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4 pt-3 border-top">
                    <button type="submit" class="btn btn-add-accent btn-lg">
                        <i class="fas fa-save me-2"></i> Lưu Hồ Sơ
                    </button>
                    <a href="@Url.Action("DanhSachNV")" class="btn btn-outline-secondary btn-lg ms-3" style="border-radius: 10px;">
                        Hủy bỏ
                    </a>
                </div>
            }
        </div>
    </div>
</div>