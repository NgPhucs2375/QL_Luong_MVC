
@model QL_Luong_MVC.Models.NhanVien
@{
    ViewBag.Title = "Cập nhật hồ sơ";
    Layout = "~/Views/Shared/_LayoutNhanVien.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-white border-0 pt-4 pb-0">
                    <h4 class="fw-bold text-primary"><i class="fas fa-user-edit me-2"></i> Cập nhật thông tin cá nhân</h4>
                    <p class="text-muted small">Vui lòng cập nhật thông tin liên hệ mới nhất để nhận thông báo.</p>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm("EditProfile", "NhanVien", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.IDNhanVien)

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="small text-muted fw-bold">Họ và tên</label>
                                <input type="text" class="form-control bg-light" value="@Model.FullNameNhanVien" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="small text-muted fw-bold">Mã nhân viên</label>
                                <input type="text" class="form-control bg-light" value="NV-@Model.IDNhanVien" readonly />
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="form-group mb-3">
                            <label class="fw-bold text-dark">Số điện thoại <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(m => m.SDT_NhanVien, new { @class = "form-control", required = "required" })
                        </div>

                        <div class="form-group mb-3">
                            <label class="fw-bold text-dark">Email liên hệ <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(m => m.Email_NhanVien, new { @class = "form-control", type = "email", required = "required" })
                        </div>

                        <div class="form-group mb-3">
                            <label class="fw-bold text-dark">Địa chỉ thường trú</label>
                            @Html.TextAreaFor(m => m.Address_NhanVien, new { @class = "form-control", rows = "2" })
                        </div>

                        <div class="form-group mb-4">
                            <label class="fw-bold text-dark">Ngày sinh</label>
                            @Html.TextBoxFor(m => m.DayOfBirth_NhanVien, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        </div>

                        <div class="d-flex justify-content-end">
                            <a href="@Url.Action("InfoNV")" class="btn btn-light me-2">Hủy bỏ</a>
                            <button type="submit" class="btn btn-primary px-4 shadow">
                                <i class="fas fa-save me-2"></i> Lưu thay đổi
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>