@model List<QL_Luong_MVC.Models.PhongBan>
@{
    ViewBag.Title = "Danh Sách Phòng Ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">📋 Danh Sách Phòng Ban</h2>

@if (TempData["ThongBao"] != null)
{
    <div class="alert alert-info">@TempData["ThongBao"]</div>
}

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Mã PB</th>
            <th>Tên Phòng Ban</th>
            <th>Ngày Thành Lập</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pb in Model)
        {
            <tr>
                <td>@pb.IDPhongBan</td>
                <td>@pb.NamePhongBan</td>
                <td>@pb.DateOf_Establishment.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="@Url.Action("ChiTietNV", "NhanVien", new { id = pb.IDPhongBan })" class="btn btn-info btn-sm">Xem NV</a>
                    <a href="@Url.Action("SuaPB", "NhanVien", new { id = pb.IDPhongBan })" class="btn btn-warning btn-sm">Sửa</a>
                    <a href="@Url.Action("XoaPB", "NhanVien", new { id = pb.IDPhongBan })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa phòng ban này không?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("ThemPB", "NhanVien")" class="btn btn-success mt-3">➕ Thêm Phòng Ban</a>
