@model QL_Luong_MVC.Models.PhongBan
@{
    ViewBag.Title = "Sửa Phòng Ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">✏️ Sửa Phòng Ban</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.IDPhongBan)

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.NamePhongBan)
        @Html.TextBoxFor(m => m.NamePhongBan, new { @class = "form-control", placeholder = "Tên phòng ban" })
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(m => m.DateOf_Establishment)
        @Html.TextBoxFor(m => m.DateOf_Establishment, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a href="@Url.Action("DanhSachPB")" class="btn btn-secondary">Hủy</a>
}
