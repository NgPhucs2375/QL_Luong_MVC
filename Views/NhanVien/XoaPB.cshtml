@model QL_Luong_MVC.Models.PhongBan
@{
    ViewBag.Title = "Xóa Phòng Ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4 text-danger">⚠️ Xóa Phòng Ban</h2>

<p>Bạn có chắc chắn muốn xóa phòng ban: <strong>@Model.NamePhongBan</strong> không?</p>

@using (Html.BeginForm("XoaPB", "PhongBan", FormMethod.Post))
{
    @Html.HiddenFor(m => m.IDPhongBan)

    <button type="submit" class="btn btn-danger">Xóa</button>
    <a href="@Url.Action("DanhSachPB")" class="btn btn-secondary">Hủy</a>
}
