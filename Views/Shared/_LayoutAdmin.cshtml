<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HR Manager Plus</title>

    <!-- Google Fonts: Inter (Font hiện đại nhất hiện nay cho Dashboard) -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet" />

    <!-- SLATE THEME CSS -->
    <style>
        :root {
            /* 60% - NỀN TẢNG (Xám lạnh/Trắng) */
            --bg-body: #F1F5F9;
            --bg-surface: #FFFFFF;
            /* 30% - KHỐI CHÍNH (Slate Navy) */
            --sidebar-bg: #0F172A; /* Màu chủ đạo trầm tính */
            --sidebar-active: #1E293B;
            --text-primary: #334155;
            /* 10% - ĐIỂM NHẤN (Teal/Emerald - Màu của sự thành công/tiền lương) */
            --accent-color: #0EA5E9; /* Sky Blue */
            --success-color: #10B981; /* Emerald Green */
            --danger-color: #EF4444;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-body) !important;
            color: var(--text-primary);
        }

        /* --- 1. SIDEBAR (Thanh bên trái) --- */
        .bg-slate-theme {
            background-color: var(--sidebar-bg) !important;
            background-image: linear-gradient(180deg, var(--sidebar-bg) 10%, #1E293B 100%);
        }

        .sidebar .nav-item .nav-link {
            color: #94A3B8 !important; /* Màu chữ xám nhạt */
            font-weight: 500;
        }

            .sidebar .nav-item .nav-link:hover {
                color: #fff !important;
                background-color: rgba(255,255,255,0.05);
                border-radius: 8px;
            }

        .sidebar .nav-item.active .nav-link {
            color: #fff !important;
            background-color: var(--sidebar-active);
            border-left: 4px solid var(--accent-color); /* Điểm nhấn */
            border-radius: 4px;
        }

        /* --- 2. CARDS (Thẻ nội dung) --- */
        .card-plus {
            border: none;
            border-radius: 12px;
            background: var(--bg-surface);
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
            transition: transform 0.2s;
        }

            .card-plus:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            }

        /* --- 3. BUTTONS (Nút bấm) --- */
        .btn-accent {
            background-color: var(--accent-color);
            border-color: var(--accent-color);
            color: white;
            font-weight: 600;
            border-radius: 8px;
            padding: 0.5rem 1.2rem;
        }

            .btn-accent:hover {
                background-color: #0284C7;
                color: white;
            }

        /* --- 4. TOPBAR --- */
        .topbar.glass-nav {
            background-color: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(8px);
            border-bottom: 1px solid #E2E8F0;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body id="page-top">
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-slate-theme sidebar sidebar-dark accordion" id="accordionSidebar">
            <li class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index", "Home")">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-layer-group text-info"></i>
                </div>
                <div class="sidebar-brand-text mx-3">HRM Plus</div>
            </li>
            <li class="sidebar-divider my-0">

            <!-- Profile Mini (Mới) - ĐÃ SỬA LỖI TẠI ĐÂY -->
            @if (Session["TenDangNhap"] != null)
            {
                <!-- Lấy tên từ Session để an toàn hơn -->
                var currentUserName = Session["TenDangNhap"].ToString();
                var firstLetter = !string.IsNullOrEmpty(currentUserName) ? currentUserName.Substring(0, 1).ToUpper() : "U";

                <div class="sidebar-heading mt-3">Xin chào,</div>
                <li class="nav-item">
                    <div class="nav-link pb-0 pt-1">
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle bg-white text-dark d-flex justify-content-center align-items-center font-weight-bold mr-2" style="width:35px; height:35px;">
                                @firstLetter
                            </div>
                            <span>@currentUserName</span>
                        </div>
                    </div>
                </li>
                <hr class="sidebar-divider mt-3">
            }

            <!-- MENU CHÍNH -->
            <li class="sidebar-heading">Quản trị</li>

            <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
                <a class="nav-link" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-fw fa-chart-pie"></i>
                    <span>Tổng quan</span>
                </a>
            </li>

            <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "NhanVien" && ViewContext.RouteData.Values["Action"].ToString() == "DanhSachNV" ? "active" : "")">
                <a class="nav-link" href="@Url.Action("DanhSachNV", "NhanVien")">
                    <i class="fas fa-fw fa-users"></i>
                    <span>Nhân sự</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseLuong">
                    <i class="fas fa-fw fa-coins"></i>
                    <span>Lương & Chế độ</span>
                </a>
                <div id="collapseLuong" class="collapse" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="@Url.Action("Index","LuongCoban")">Lương cơ bản</a>
                        <a class="collapse-item" href="@Url.Action("Index","HopDong")">Hợp đồng</a>
                        <a class="collapse-item" href="@Url.Action("Index","PhuCap")">Phụ cấp</a>
                    </div>
                </div>
            </li>

            <!-- Divider -->
            <li class="sidebar-divider d-none d-md-block">
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>
        </ul>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light topbar mb-4 static-top shadow-none glass-nav">
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                    <!-- Topbar Search -->
                    <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                        <div class="input-group">
                            <input type="text" class="form-control bg-light border-0 small" placeholder="Tìm kiếm nhân sự..." style="border-radius: 8px 0 0 8px;">
                            <div class="input-group-append">
                                <button class="btn btn-accent" type="button" style="border-radius: 0 8px 8px 0;">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">@User.Identity.Name</span>
                                <img class="img-profile rounded-circle" src="~/Content/img/default-avatar.png">
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in">
                                <a class="dropdown-item" href="@Url.Action("Logout","Login")">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Đăng xuất
                                </a>
                            </div>
                        </li>
                    </ul>
                </nav>

                <!-- Main Content -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; HR Plus 2025</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Scripts/js/sb-admin-2.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>