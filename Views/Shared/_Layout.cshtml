<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - QL Lương Nhân Viên</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />

    @RenderSection("styles", required: false)

</head>
<body id="page-top" class="purple-theme">
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Logo -->
            <li class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index", "Home")">
                <div class="sidebar-brand-icon">
                    <i class="fas fa-coins"></i>
                </div>
                <div class="sidebar-brand-text mx-3">QL Lương NV</div>
            </li>
            <li>
                <hr class="sidebar-divider my-0" />
            </li>

            <!-- Menu -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","LuongCoban")" data-tooltip="Lương cơ bản">
                    <i class="fas fa-money-bill-wave"></i> <span>Lương cơ bản</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","PhuCap")" data-tooltip="Phụ cấp">
                    <i class="fas fa-hand-holding-usd"></i> <span>Phụ cấp</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","HopDong")" data-tooltip="Hợp đồng">
                    <i class="fas fa-file-contract"></i> <span>Hợp đồng</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("QuanLyTaiKhoan","Admin")" data-tooltip="Hợp đồng">
                    <i class="fas fa-file-contract"></i> <span>Cấp quyền</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("DanhSachNV","NhanVien")" data-tooltip="Hợp đồng">
                    <i class="fas fa-file-contract"></i> <span>Quản lý nhân viên</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("DanhSachPB","NhanVien")" data-tooltip="Hợp đồng">
                    <i class="fas fa-file-contract"></i> <span>Quản lý phòng ban</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white font-weight-bold" href="@Url.Action("Logout", "Login")">
                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-1 text-white"></i>
                    Đăng xuất
                </a>
            </li>

            <li>
                <hr class="sidebar-divider d-none d-md-block" />
            </li>
        </ul>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 shadow">
                    <span class="navbar-brand">Hệ thống quản lý lương</span>

                    <!-- Search Bar -->
                    <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 navbar-search" id="searchForm">
                        <div class="input-group">
                            <input type="text" id="searchInput" class="form-control bg-light border-0 small"
                                   placeholder="Tìm kiếm nhân viên, hợp đồng, lương..." aria-label="Search"
                                   aria-describedby="basic-addon2" />
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </nav>

                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <footer class="sticky-footer bg-white">
                <div class="text-center my-auto">
                    <span>© QL Lương Nhân Viên - 2025</span>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Scripts/js/sb-admin-2.min.js"></script>
    <style>
        /* Bắt toàn bộ background tím nhạt */
        body.purple-theme,
        #wrapper,
        #content-wrapper {
            background: linear-gradient(135deg, #e8dcff, #d6c4ff, #c3b6ff) !important;
            background-attachment: fixed !important;
            min-height: 100vh;
        }

        /* Làm trong nền của các vùng nội dung để vẫn đọc rõ */
        .purple-theme .container-fluid,
        .purple-theme .card,
        .purple-theme .content,
        .purple-theme .bg-white {
            background-color: rgba(255, 255, 255, 0.88) !important;
            backdrop-filter: blur(10px);
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(140, 110, 255, 0.2);
        }

        /* Sidebar gradient */
        .purple-theme .bg-gradient-primary {
            background: linear-gradient(180deg, #6f42c1, #a98bff) !important;
        }

        /* Thanh topbar trắng nhẹ nhưng viền mờ tím */
        .purple-theme .navbar-light.bg-white {
            background-color: rgba(255, 255, 255, 0.85) !important;
            border-bottom: 2px solid rgba(155, 120, 255, 0.2);
            backdrop-filter: blur(6px);
        }

        /* Footer tím nhạt */
        .purple-theme footer.sticky-footer {
            background: rgba(255, 255, 255, 0.75) !important;
            color: #4b2c91;
            font-weight: 500;
        }

        /* Hover sidebar */
        .purple-theme .nav-item:hover .nav-link {
            background-color: rgba(255, 255, 255, 0.15);
            border-radius: 8px;
            transition: 0.2s;
        }

        /* Active link */
        .purple-theme .nav-item.active .nav-link {
            background-color: rgba(255, 255, 255, 0.25);
            font-weight: 600;
            border-radius: 8px;
        }
    </style>


</body>
</html>
