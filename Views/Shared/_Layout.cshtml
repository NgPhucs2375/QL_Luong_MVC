<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - QL Lương Nhân Viên</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body id="page-top" class="purple-theme">
    <div id="wrapper">
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <li class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index", "Home")">
                <div class="sidebar-brand-icon">
                    <i class="fas fa-coins"></i>
                </div>
                <div class="sidebar-brand-text mx-3">QL Lương NV</div>
            </li>
            <li>
                <hr class="sidebar-divider my-0" />
            </li>

            <li class="nav-item profile-item">
                <a class="nav-link d-flex align-items-center" href="@Url.Action("Profile","NhanVien")">
                    <img src="~/Content/img/default-avatar.png" alt="Avatar" class="profile-avatar mr-2" />
                    <span class="profile-name">@User.Identity.Name</span>
                </a>
            </li>
            <li>
                <hr class="sidebar-divider my-0" />
            </li>

            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Bảng điều khiển</span>
                </a>
            </li>

            <li class="nav-item has-submenu">
                <a class="nav-link d-flex align-items-center justify-content-between" href="javascript:void(0)">
                    <span><i class="fas fa-layer-group"></i> <span>Quản lý Lương</span></span>
                    <i class="fas fa-chevron-right submenu-caret"></i>
                </a>
                <ul class="submenu nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","LuongCoban")">
                            <i class="fas fa-money-bill-wave"></i> Lương cơ bản
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","PhuCap")">
                            <i class="fas fa-hand-holding-usd"></i> Phụ cấp
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","HopDong")">
                            <i class="fas fa-file-contract"></i> Hợp đồng
                        </a>
                    </li>
                </ul>
            </li>

            <li class="nav-item has-submenu">
                <a class="nav-link d-flex align-items-center justify-content-between" href="javascript:void(0)">
                    <span><i class="fas fa-users"></i> <span>Quản lý Nhân Viên</span></span>
                    <i class="fas fa-chevron-right submenu-caret"></i>
                </a>
                <ul class="submenu nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("DanhSachNV","NhanVien")">
                            <i class="fas fa-user"></i> Danh sách nhân viên
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("DanhSachPB","NhanVien")">
                            <i class="fas fa-building"></i> Danh sách phòng ban
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("QuanLyTaiKhoan","Admin")">
                            <i class="fas fa-user-shield"></i> Cấp quyền
                        </a>
                    </li>
                </ul>
            </li>

            <li class="nav-item mt-auto">
                <a class="nav-link text-white font-weight-bold" href="@Url.Action("Logout", "Login")">
                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-1 text-white"></i>
                    Đăng xuất
                </a>
            </li>
            <li>
                <hr class="sidebar-divider d-none d-md-block" />
            </li>
        </ul>
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 shadow">
                    <span class="navbar-brand">Hệ thống quản lý lương</span>

                    <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 navbar-search" id="searchForm">
                        <div class="input-group">
                            <input type="text" id="searchInput" class="form-control bg-light border-0 small"
                                   placeholder="Tìm kiếm nhân viên, hợp đồng, lương..." aria-label="Search"
                                   aria-describedby="basic-addon2" />
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </nav>
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <footer class="sticky-footer purple-footer">
                <div class="footer-content container text-center my-auto">
                    <div class="footer-top mb-2">
                        <span class="footer-tagline">“Quản lý lương hiệu quả – Đồng hành cùng nhân viên”</span>
                    </div>
                    <div class="footer-middle mb-2">
                        <a href="#" class="footer-link">Trang Chủ</a> |
                        <a href="#" class="footer-link">Liên Hệ</a> |
                        <a href="#" class="footer-link">Hỗ Trợ</a> |
                        <a href="#" class="footer-link">Điều Khoản</a>
                    </div>
                    <div class="footer-bottom mb-1">
                        <span>© QL Lương Nhân Viên - 2025</span>
                    </div>
                    <div class="footer-icons mt-2">
                        <a href="#" class="footer-link"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="footer-link"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="footer-link"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Scripts/js/sb-admin-2.min.js"></script>
    @RenderSection("Scripts", required: false)

    <style>
        /* * Bảng màu 60/30/10
         * 60% (Chủ đạo): Tím siêu nhạt (#f4f1fa)
         * 30% (Thứ cấp): Tím đậm (#6A0DAD) & Kính mờ (rgba(255,255,255,0.85))
         * 10% (Nhấn): Vàng cam (#FFC107 & #FFB74D)
        */

        :root {
            --color-main-bg: #f4f1fa; /* 60% - Nền chính */
            --color-content-bg: rgba(255, 255, 255, 0.85); /* 30% - Nền nội dung (Kính mờ) */
            --color-sidebar-bg: linear-gradient(180deg, #6A0DAD, #7B68EE); /* 30% - Nền Sidebar/Footer */

            --color-accent: #FFC107; /* 10% - Nhấn (Vàng) */
            --color-accent-hover: #FFB74D; /* 10% - Nhấn (Cam) */

            --color-text-dark-purple: #4B0082; /* Chữ tím đậm */
            --color-text-light: #FFFFFF;
        }

        /* ==== 60% - Nền chính ==== */
        body.purple-theme,
        #wrapper,
        #content-wrapper {
            background: var(--color-main-bg) !important;
            background-attachment: fixed !important;
            min-height: 100vh;
        }

        /* ==== 30% - Nền nội dung (Kính mờ) ==== */
        .purple-theme .container-fluid,
        .purple-theme .card,
        .purple-theme .content,
        .purple-theme .bg-white {
            background-color: var(--color-content-bg) !important;
            backdrop-filter: blur(10px);
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(140, 110, 255, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.5); /* Thêm viền trắng mờ cho đẹp */
        }

        /* Topbar cũng là nền nội dung */
        .purple-theme .navbar-light.bg-white {
            background-color: var(--color-content-bg) !important;
            border-bottom: 2px solid rgba(155, 120, 255, 0.2);
            backdrop-filter: blur(8px);
            color: var(--color-text-dark-purple);
        }

        /* ==== 30% - Nền Sidebar & Footer ==== */
        .purple-theme .bg-gradient-primary {
            background: var(--color-sidebar-bg) !important;
        }

        .purple-footer {
            background: var(--color-sidebar-bg) !important; /* Đồng bộ footer với sidebar */
            color: rgba(255,255,255,0.7); /* Chữ trắng mờ */
            font-weight: 500;
            padding: 1.5rem 0;
            box-shadow: 0 -4px 15px rgba(0,0,0,0.2);
            border-top: 2px solid var(--color-accent); /* Viền accent vàng */
            transition: all 0.3s ease;
        }

        /* ==== 10% - Màu nhấn (Vàng/Cam) ==== */

        /* Nút tìm kiếm */
        .purple-theme .navbar-search .btn-primary {
            background-color: #6A0DAD !important; /* Tím đậm - Màu đầu của gradient Sidebar */
            border-color: #7B68EE !important; /* Tím nhạt hơn - Màu cuối của gradient Sidebar */
            /* Đổi từ Icon Tím sang Icon Vàng */
            color: var(--color-accent) !important; /* Vàng nhấn */
            transition: all 0.2s ease-in-out;
        }

            .purple-theme .navbar-search .btn-primary:hover {
                /* Đổi nền hover thành màu tím nhạt hơn */
                background-color: #7B68EE !important;
                border-color: #6A0DAD !important;
                /* Icon vẫn là Vàng Cam */
                color: var(--color-accent-hover) !important;
                transform: scale(1.05);
            }

        /* Sidebar Hover */
        .purple-theme .nav-item:hover .nav-link {
            background-color: rgba(255, 193, 7, 0.15); /* Vàng mờ khi hover */
            border-radius: 8px;
            transition: 0.2s;
        }

        .purple-theme a.nav-link:hover span,
        .purple-theme a.nav-link:hover i {
            color: var(--color-accent) !important; /* Chữ/icon vàng khi hover */
        }

        /* Sidebar Active */
        .purple-theme .nav-item.active .nav-link {
            background-color: rgba(255, 183, 77, 0.25); /* Cam mờ khi active */
            font-weight: 600;
            border-radius: 8px;
        }

        .purple-theme a.nav-link.active span,
        .purple-theme a.nav-link.active i {
            color: var(--color-accent-hover) !important; /* Chữ/icon cam khi active */
        }

        /* Profile Avatar */
        .profile-avatar {
            border: 2px solid var(--color-accent) !important;
        }

        /* Footer Links */
        .footer-content .footer-tagline,
        .footer-content .footer-middle .footer-link,
        .purple-footer .footer-link i {
            color: var(--color-accent) !important;
            transition: 0.3s;
        }

            .footer-content .footer-middle .footer-link:hover,
            .purple-footer .footer-link i:hover {
                color: var(--color-text-light) !important;
                transform: scale(1.1);
            }

        /* ==== Style chung (Giữ nguyên từ bản gốc) ==== */
        .purple-theme .sidebar-dark .nav-link,
        .purple-theme .sidebar-dark .sidebar-brand-text {
            color: var(--color-text-light) !important;
        }

        .purple-theme .has-submenu .submenu {
            display: none;
            margin: 4px 0 8px 0;
            padding-left: 0.75rem;
            border-left: 1px solid rgba(255, 193, 7, 0.2); /* 10% accent */
        }

        .purple-theme .has-submenu:hover > .submenu {
            display: block;
        }

        .purple-theme .has-submenu .submenu .nav-link {
            padding: 0.35rem 1rem;
            border-radius: 6px;
            font-size: 0.95rem;
            color: var(--color-text-light);
            opacity: 0.95;
        }

            .purple-theme .has-submenu .submenu .nav-link i {
                width: 18px;
                text-align: center;
                margin-right: 6px;
            }

        .purple-theme .has-submenu > .nav-link .submenu-caret {
            transition: transform 0.2s ease;
            opacity: 0.85;
            margin-left: 8px;
        }

        .purple-theme .has-submenu:hover > .nav-link .submenu-caret {
            transform: rotate(90deg);
        }

        .purple-theme a.nav-link span,
        .purple-theme a.nav-link i {
            color: var(--color-text-light); /* Chữ + icon trắng mặc định */
        }

        .purple-theme .profile-item .nav-link {
            background-color: rgba(255,255,255,0.1);
            border-radius: 8px;
            padding: 0.5rem 1rem;
            margin: 0.5rem 0;
            transition: 0.2s;
        }

            .purple-theme .profile-item .nav-link:hover {
                background-color: rgba(255,193,7,0.15); /* 10% accent */
            }

        .profile-avatar {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            object-fit: cover;
        }

        .profile-name {
            font-weight: 600;
            color: var(--color-text-light);
            font-size: 0.95rem;
        }
    </style>

</body>
</html>