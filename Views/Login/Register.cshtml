<form method="post" action="/Login/Register" class="p-3 rounded shadow-sm">
    <div class="mb-3">
        <label class="form-label fw-semibold">Tên đăng nhập</label>
        <input type="text" name="TenDangNhap" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Mật khẩu</label>
        <input type="password" name="MatKhau" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Mã nhân viên</label>
        <input type="number" name="MaNV" class="form-control" required />
    </div>

    <div class="d-flex justify-content-between">
        <!-- Nút đăng ký -->
        <button type="submit" class="btn w-50 me-2"
                style="background-color:#007bff; color:white; border:none;">
            Đăng ký
        </button>

        <!-- Nút đăng nhập -->
        <a href="@Url.Action("Login", "Login")"
           class="btn w-50"
           style="background-color:#28a745; color:white; border:none; text-align:center;">
            Bạn đã có tài khoản? Đăng nhập
        </a>
    </div>

    @if (ViewBag.Error != null)
    {
        <p class="text-danger mt-3">@ViewBag.Error</p>
    }

    @if (ViewBag.Success != null)
    {
        <p class="text-success mt-3">@ViewBag.Success</p>
    }
</form>
