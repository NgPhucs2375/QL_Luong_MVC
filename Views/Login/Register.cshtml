@{
    ViewBag.Title = "Đăng ký nhân viên mới";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet" />
    <style>
        /* Sử dụng chung theme tím/gradient với Login */
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', sans-serif;
        }

        .register-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border-radius: 20px;
            width: 450px;
            padding: 2.5rem;
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        }

        .form-control {
            border-radius: 50px;
            padding-left: 2.5rem;
            height: 45px;
        }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 13px;
            color: #aaa;
        }

        .btn-register {
            background: #FFC107;
            color: #333;
            font-weight: 800;
            border-radius: 50px;
            width: 100%;
            padding: 10px;
            border: none;
            transition: 0.3s;
        }

            .btn-register:hover {
                background: #FFB74D;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(255, 193, 7, 0.3);
            }
    </style>
</head>
<body>
    <div class="register-card">
        <div class="text-center mb-4">
            <h3 class="font-weight-bold text-dark">Tạo tài khoản</h3>
            <p class="text-muted small">Dành cho nhân viên nội bộ</p>
        </div>

        <form method="post" action="/Login/Register">
            <div class="form-group position-relative">
                <i class="fas fa-id-badge input-icon"></i>
                <input type="number" name="MaNV" class="form-control" placeholder="Mã Nhân Viên của bạn" required />
                <small class="form-text text-muted ml-3">Nhập mã NV được cấp bởi HR.</small>
            </div>

            <div class="form-group position-relative">
                <i class="fas fa-user input-icon"></i>
                <input type="text" name="TenDangNhap" class="form-control" placeholder="Tên đăng nhập mong muốn" required />
            </div>

            <div class="form-group position-relative mb-4">
                <i class="fas fa-lock input-icon"></i>
                <input type="password" name="MatKhau" class="form-control" placeholder="Mật khẩu bảo mật" required />
            </div>

            <button type="submit" class="btn btn-register mb-3">ĐĂNG KÝ NGAY</button>

            <div class="text-center">
                <a href="@Url.Action("Login", "Login")" class="small font-weight-bold text-secondary">Đã có tài khoản? Đăng nhập</a>
            </div>

            @if (ViewBag.Error != null)
            {<div class="alert alert-danger mt-3 small text-center">@ViewBag.Error</div>}
            @if (ViewBag.Success != null)
            {<div class="alert alert-success mt-3 small text-center">@ViewBag.Success</div>}
        </form>
    </div>
</body>
</html>