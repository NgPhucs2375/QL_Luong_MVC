@model QL_Luong_MVC.Models.LuongCoban
@{
    ViewBag.Title = "Thêm mức lương mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var dsCV = ViewBag.DSChucVu as List<QL_Luong_MVC.Models.ChucVu>;
}

<style>
    /* CSS tùy chỉnh cho các nút và input */
    .btn-save-accent {
        /* Nút Lưu dùng màu Vàng Nhấn (Accent 10%) */
        background-color: var(--color-accent) !important;
        color: var(--color-text-dark-purple) !important;
        border: 2px solid var(--color-accent);
        font-weight: 700;
        transition: all 0.2s ease;
    }

        .btn-save-accent:hover {
            background-color: var(--color-accent-hover) !important;
            border-color: var(--color-accent-hover) !important;
            transform: translateY(-2px);
        }

    .btn-back-outline {
        /* Nút Quay lại dùng outline màu Tím đậm */
        color: #6A0DAD;
        border-color: #7B68EE;
        font-weight: 600;
        transition: all 0.2s ease;
    }

        .btn-back-outline:hover {
            background-color: rgba(106, 13, 173, 0.1);
            color: var(--color-text-dark-purple);
        }

    /* Tiêu đề label màu tím đậm */
    .form-label-purple {
        color: var(--color-text-dark-purple);
        font-weight: 600;
    }
</style>

<div class="container py-5" style="max-width:750px;">
    <!-- Card áp dụng phong cách Kính Mờ của Layout gốc -->
    <div class="card shadow-lg mb-4" style="border-radius: 15px; border: 1px solid rgba(255, 255, 255, 0.5);">

        <!-- Card Header: Dùng màu Tím đậm Gradient của Sidebar/Footer (30%) -->
        <div class="card-header text-white"
             style="background: var(--color-sidebar-bg); border-radius:15px 15px 0 0;">
            <h4 class="mb-0 fw-bold">
                <i class="fas fa-plus-circle me-2" style="color: var(--color-accent);"></i> Thêm mức lương mới
            </h4>
        </div>

        <div class="card-body p-5">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mb-4">
                    <label class="form-label form-label-purple">Chức vụ</label>
                    <div class="input-group">
                        <span class="input-group-text" style="background-color: rgba(106, 13, 173, 0.1); border-color: #ccc;">
                            <i class="fas fa-user-tie" style="color: #6A0DAD;"></i>
                        </span>
                        <select class="form-select" name="IDChucVu_LuongCB" required style="border-radius: 0 0.375rem 0.375rem 0;">
                            <option value="">-- Chọn chức vụ --</option>
                            @foreach (var cv in dsCV)
                            {
                                <option value="@cv.IDChucVu">@cv.NameChucVu</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label form-label-purple">Mức lương (VNĐ)</label>
                    <div class="input-group">
                        <span class="input-group-text" style="background-color: rgba(106, 13, 173, 0.1); border-color: #ccc;">
                            <i class="fas fa-money-bill-wave" style="color: #6A0DAD;"></i>
                        </span>
                        @Html.TextBoxFor(m => m.MucLuong, new { @class = "form-control", @type = "number", @min = "0", @step = "1000", @placeholder = "Nhập mức lương cơ bản...", @style = "border-radius: 0 0.375rem 0.375rem 0;" })
                    </div>
                    @Html.ValidationMessageFor(m => m.MucLuong, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-between mt-5 pt-3 border-top">
                    <!-- Nút Quay Lại dùng outline Tím -->
                    <a href="@Url.Action("Index")" class="btn btn-outline-primary btn-back-outline px-4">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>

                    <!-- Nút Lưu dùng màu Vàng Nhấn (10%) -->
                    <button type="submit" class="btn btn-save-accent px-4">
                        <i class="fas fa-save me-1"></i> Lưu mức lương
                    </button>
                </div>
            }
        </div>
    </div>
</div>