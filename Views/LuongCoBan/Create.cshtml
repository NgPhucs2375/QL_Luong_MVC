@model QL_Luong_MVC.Models.LuongCoban
@{
    ViewBag.Title = "Thêm mức lương mới";
    var dsCV = ViewBag.DSChucVu as List<QL_Luong_MVC.Models.ChucVu>;
}


<div class="container py-5" style="max-width:700px;">
    <div class="card shadow-lg border-0" style="border-radius: 15px; background-color: #ffffffcc; backdrop-filter: blur(6px);">
        <div class="card-header text-white"
             style="background: linear-gradient(90deg, #7c4dff, #b388ff); border-radius:15px 15px 0 0;">
            <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Thêm mức lương mới</h4>
        </div>

        <div class="card-body p-4">
            @using (Html.BeginForm("Create", "LuongCoBan", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                <div class="form-group mb-4">
                    <label class="form-label fw-bold">Chức vụ</label>
                    <select class="form-select" name="IDChucVu_LuongCB" required>
                        <option value="">-- Chọn chức vụ --</option>
                        @if (dsCV != null)
                        {
                            foreach (var cv in dsCV)
                            {
                                <option value="@cv.IDChucVu">@cv.NameChucVu</option>
                            }
                        }
                    </select>
                </div>

                <div class="form-group mb-4">
                    <label class="small font-weight-bold text-secondary text-uppercase">Mức lương quy định</label>
                    <div class="input-group">
                        <input type="number" name="MucLuong" class="form-control bg-light border-0" min="0" step="1000" placeholder="VD: 5000000" required />
                        <div class="input-group-append">
                            <span class="input-group-text border-0 bg-light text-muted font-weight-bold">VNĐ</span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.MucLuong, "", new { @class = "text-danger small mt-1" })
                </div>

                <div class="d-flex justify-content-between align-items-center mt-5">
                    <a href="@Url.Action("Index")" class="btn btn-link text-secondary pl-0">
                        <i class="fas fa-arrow-left mr-1"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-accent px-4 shadow-sm">
                        <i class="fas fa-save mr-2"></i> Lưu thiết lập
                    </button>
                </div>
            }
        </div>
    </div>
</div>
