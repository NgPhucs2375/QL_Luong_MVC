@model QL_Luong_MVC.Models.LuongCoban
@{
    ViewBag.Title = "Xóa mức lương";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card card-plus shadow border-left-danger">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <div class="icon-circle bg-danger text-white mx-auto mb-3" style="width: 60px; height: 60px; font-size: 1.5rem;">
                            <i class="fas fa-trash-alt"></i>
                        </div>
                        <h4 class="font-weight-bold text-gray-800">Xác nhận xóa?</h4>
                        <p class="text-muted">
                            Bạn đang thực hiện xóa mức lương cơ bản của chức vụ có mã <strong>@Model.IDChucVu_LuongCB</strong>.
                            <br>Hành động này không thể hoàn tác.
                        </p>
                    </div>

                    <div class="bg-light p-3 rounded mb-4 text-left">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-gray-600 small font-weight-bold">Mã lương:</span>
                            <span class="text-dark font-weight-bold">#@Model.IDLuongCoBan</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-gray-600 small font-weight-bold">Mức lương:</span>
                            <span class="text-danger font-weight-bold">@Model.MucLuong.ToString("N0") ₫</span>
                        </div>
                    </div>

                    @using (Html.BeginForm("DeleteConfirmed", "LuongCoBan", new { id = Model.IDLuongCoBan }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-center">
                            <a href="@Url.Action("Index")" class="btn btn-light text-secondary font-weight-bold mr-3 px-4">Hủy</a>
                            <button type="submit" class="btn btn-danger px-4 shadow-sm font-weight-bold">
                                Xác nhận xóa
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>