@model QL_Luong_MVC.Models.LuongCoban
@{
    ViewBag.Title = "Xóa mức lương";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-5 fade-in-content">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card border-0 shadow-lg text-center" style="border-radius: 20px; overflow: hidden;">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <div class="icon-circle bg-danger-soft text-danger mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; border-radius: 50%; background: #fce8e6;">
                            <i class="fas fa-trash-alt fa-3x"></i>
                        </div>
                        <h3 class="font-weight-bold text-dark">Xác nhận xóa?</h3>
                        <p class="text-muted px-3">
                            Bạn đang yêu cầu xóa cấu hình lương cơ bản của chức vụ mã <strong>@Model.IDChucVu_LuongCB</strong>.
                            <br><span class="text-danger font-weight-bold">Hành động này không thể hoàn tác!</span>
                        </p>
                    </div>

                    <div class="card bg-light border-0 p-3 mb-4 text-left rounded">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-secondary font-weight-bold">ID Lương:</span>
                            <span class="text-dark">#@Model.IDLuongCoBan</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-secondary font-weight-bold">Mức tiền:</span>
                            <span class="text-danger font-weight-bold" style="font-size:1.1rem">@Model.MucLuong.ToString("N0") ₫</span>
                        </div>
                    </div>

                    @using (Html.BeginForm("DeleteConfirmed", "LuongCoBan", new { id = Model.IDLuongCoBan }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-center">
                            <a href="@Url.Action("Index")" class="btn btn-light text-dark font-weight-bold mr-3 px-4 rounded-pill">Hủy bỏ</a>
                            <button type="submit" class="btn btn-danger px-5 rounded-pill shadow-sm font-weight-bold">
                                <i class="fas fa-trash mr-2"></i> Xóa vĩnh viễn
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>