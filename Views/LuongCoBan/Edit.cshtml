@model QL_Luong_MVC.Models.LuongCoban
@{
    ViewBag.Title = "Điều chỉnh lương cơ bản";
    var dsCV = ViewBag.DSChucVu as List<QL_Luong_MVC.Models.ChucVu>;
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-plus shadow-sm">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0 px-4 d-flex justify-content-between align-items-center">
                    <h5 class="font-weight-bold text-primary mb-0">Điều chỉnh mức lương</h5>
                    <span class="badge badge-light text-muted border">Mã lương: #@Model.IDLuongCoBan</span>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning border-0 shadow-sm mb-4">
                        <div class="d-flex">
                            <i class="fas fa-exclamation-circle mt-1 mr-3 fa-lg"></i>
                            <small>
                                <strong>Lưu ý:</strong> Thay đổi này sẽ cập nhật mức lương cơ bản cho tất cả nhân viên đang giữ chức vụ tương ứng trong kỳ lương tới.
                            </small>
                        </div>
                    </div>

                    @using (Html.BeginForm("Edit", "LuongCoBan", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.IDLuongCoBan)

                        <div class="form-group mb-4">
                            <label class="small font-weight-bold text-secondary text-uppercase">Chức vụ</label>
                            <select class="form-control bg-light border-0 h-auto py-2" name="IDChucVu_LuongCB" required>
                                <option value="">-- Chọn chức vụ --</option>
                                @if (dsCV != null)
                                {
                                    foreach (var cv in dsCV)
                                    {
                                        var selected = cv.IDChucVu == Model.IDChucVu_LuongCB ? "selected" : "";
                                        <option value="@cv.IDChucVu" @selected>@cv.NameChucVu</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group mb-4">
                            <label class="small font-weight-bold text-secondary text-uppercase">Mức lương mới</label>
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.MucLuong, new { @class = "form-control bg-light border-0", @type = "number", @min = "0", @step = "1000" })
                                <div class="input-group-append">
                                    <span class="input-group-text border-0 bg-light text-muted font-weight-bold">VNĐ</span>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.MucLuong, "", new { @class = "text-danger small mt-1" })
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-5">
                            <a href="@Url.Action("Index")" class="btn btn-link text-secondary pl-0">Hủy bỏ</a>
                            <button type="submit" class="btn btn-accent px-4 shadow-sm">
                                <i class="fas fa-check mr-2"></i> Cập nhật
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
