@model QL_Luong_MVC.Models.LuongCoban
@{
    ViewBag.Title = "Điều chỉnh lương cơ bản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; // Chắc chắn dùng Layout Admin
    var dsCV = ViewBag.DSChucVu as List<QL_Luong_MVC.Models.ChucVu>;
}

<div class="container-fluid py-4 fade-in-content">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0" style="border-radius: 16px; overflow: hidden;">
                <div class="card-header bg-gradient-primary text-white py-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="font-weight-bold mb-1"><i class="fas fa-sliders-h mr-2"></i>Điều chỉnh lương</h5>
                            <span class="small text-white-50">Cập nhật mức lương cơ sở cho chức vụ</span>
                        </div>
                        <div class="bg-white text-primary rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 40px; height: 40px;">
                            <i class="fas fa-money-bill-wave"></i>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5 bg-white">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.IDLuongCoBan)

                        <div class="form-group mb-4">
                            <label class="small font-weight-bold text-gray-600 text-uppercase">Chức vụ áp dụng</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-light border-0"><i class="fas fa-briefcase text-primary"></i></span>
                                </div>
                                <select class="form-control bg-light border-0 font-weight-bold text-dark" name="IDChucVu_LuongCB" readonly style="pointer-events: none;">
                                    @if (dsCV != null)
                                    {
                                        foreach (var cv in dsCV)
                                        {
                                            <option value="@cv.IDChucVu" @(cv.IDChucVu == Model.IDChucVu_LuongCB ? "selected" : "")>
                                                @cv.NameChucVu (Hệ số: @cv.HeSoLuong_ChucVu)
                                            </option>
                                        }
                                    }
                                </select>
                            </div>
                            <small class="text-muted mt-2 d-block"><i class="fas fa-lock mr-1"></i> Không thể thay đổi chức vụ khi đang sửa mức lương.</small>
                        </div>

                        <div class="form-group mb-4">
                            <label class="small font-weight-bold text-gray-600 text-uppercase">Mức lương cơ bản mới</label>
                            <div class="input-group shadow-sm rounded overflow-hidden">
                                <input type="number" name="MucLuong" value="@Convert.ToInt64(Model.MucLuong)" class="form-control border-0 py-4 font-weight-bold text-success" style="font-size: 1.2rem;" min="0" step="100000" required />
                                <div class="input-group-append">
                                    <span class="input-group-text border-0 bg-light font-weight-bold text-success">VNĐ</span>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.MucLuong, "", new { @class = "text-danger small mt-1 font-italic" })
                        </div>

                        <div class="alert alert-warning border-left-warning shadow-sm mb-4" role="alert">
                            <div class="d-flex">
                                <i class="fas fa-exclamation-triangle fa-lg mt-1 mr-3 text-warning"></i>
                                <div>
                                    <strong>Cảnh báo tác động:</strong>
                                    <p class="mb-0 small">Thay đổi này sẽ ảnh hưởng đến thu nhập của <u>tất cả nhân viên</u> đang giữ chức vụ này trong kỳ lương tiếp theo.</p>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-5">
                            <a href="@Url.Action("Index")" class="btn btn-light text-secondary font-weight-bold"><i class="fas fa-arrow-left mr-1"></i> Quay lại</a>
                            <button type="submit" class="btn btn-primary px-5 py-2 shadow-sm rounded-pill font-weight-bold">
                                <i class="fas fa-save mr-2"></i> Lưu thay đổi
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>