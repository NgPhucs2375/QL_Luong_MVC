@model IEnumerable<QL_Luong_MVC.Models.LuongCoban>
@{
    ViewBag.Title = "Cấu hình Lương cơ bản";
}

<div class="container-fluid py-4">
    <div class="row">
        <!-- Cột Trái: Danh sách -->
        <div class="col-lg-8 mb-4">
            <div class="card card-plus shadow">
                <div class="card-header py-3 bg-white border-bottom-0">
                    <h6 class="m-0 font-weight-bold text-primary">Bảng lương cơ bản theo chức vụ</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-borderless table-hover align-middle">
                            <thead class="border-bottom">
                                <tr class="text-muted small text-uppercase">
                                    <th>Mã</th>
                                    <th>Mã Chức vụ</th>
                                    <th>Mức lương quy định</th>
                                    <th class="text-right">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.IDLuongCoBan</td>
                                        <td><span class="badge badge-light text-dark border">CV-@item.IDChucVu_LuongCB</span></td>
                                        <td class="font-weight-bold text-success">@item.MucLuong.ToString("N0") ₫</td>
                                        <td class="text-right">
                                            <a href="@Url.Action("Edit", new { id = item.IDLuongCoBan })" class="btn btn-sm btn-light text-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", new { id = item.IDLuongCoBan })" class="btn btn-sm btn-light text-danger ml-1">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cột Phải: Thông tin nhanh hoặc Form thêm nhanh -->
        <div class="col-lg-4">
            <div class="card card-plus shadow bg-gradient-primary text-white">
                <div class="card-body p-4">
                    <h5 class="font-weight-bold mb-3">Thiết lập lương</h5>
                    <p class="small opacity-75">
                        Việc thay đổi mức lương cơ bản tại đây sẽ ảnh hưởng đến tất cả nhân viên thuộc chức vụ tương ứng trong kỳ lương tiếp theo.
                    </p>
                    <a href="@Url.Action("Create")" class="btn btn-light btn-block text-primary font-weight-bold mt-4">
                        <i class="fas fa-plus mr-2"></i> Thêm mức lương mới
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>