@model QL_Luong_MVC.ViewModel.DashBoardViewModel
@using System.Globalization
@{
    ViewBag.Title = "Tổng quan hệ thống";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; // Kế thừa layout chuẩn

    // 1. Cấu hình định dạng Tiền tệ Việt Nam
    var vnCulture = new CultureInfo("vi-VN");

    // 2. Xử lý an toàn dữ liệu (Tránh lỗi Null Reference nếu Model rỗng)
    var safeSalaryLabels = Model != null && Model.SalaryByMonthLabels != null ? Model.SalaryByMonthLabels : new List<string>();
    var safeSalaryValues = Model != null && Model.SalaryByMonthValues != null ? Model.SalaryByMonthValues : new List<decimal>();
    var safeAllowanceLabels = Model != null && Model.AllowanceLabels != null ? Model.AllowanceLabels : new List<string>();
    var safeAllowanceValues = Model != null && Model.AllowanceValues != null ? Model.AllowanceValues : new List<decimal>();

    // 3. Bảng màu đồng bộ
    string[] chartColors = new string[] { "#0EA5E9", "#10B981", "#6366F1", "#F59E0B", "#F43F5E", "#8B5CF6", "#64748B" };
}

<style>
    /* CSS RIÊNG CHO DASHBOARD (Không ảnh hưởng Layout chính) */
    .stat-card-slate {
        border: none;
        border-radius: 16px;
        background: #fff;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        position: relative;
        overflow: hidden;
        height: 100%;
    }

        .stat-card-slate:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

    .stat-icon-bg {
        position: absolute;
        right: -10px;
        bottom: -10px;
        font-size: 5rem;
        opacity: 0.1;
        transform: rotate(-15deg);
        z-index: 0;
    }

    /* Border Left Colors */
    .border-l-blue {
        border-left: 4px solid #0EA5E9;
    }

    .border-l-emerald {
        border-left: 4px solid #10B981;
    }

    .border-l-indigo {
        border-left: 4px solid #6366F1;
    }

    .border-l-amber {
        border-left: 4px solid #F59E0B;
    }

    /* Text Colors */
    .text-blue-slate {
        color: #0EA5E9;
    }

    .text-emerald-slate {
        color: #10B981;
    }

    .text-indigo-slate {
        color: #6366F1;
    }

    .text-amber-slate {
        color: #F59E0B;
    }

    /* Chart Container */
    .chart-container-slate {
        position: relative;
        height: 350px;
        width: 100%;
    }

    /* Chip nhân viên */
    .emp-chip-slate {
        display: inline-flex;
        align-items: center;
        padding: 4px 12px 4px 4px;
        background: #F8FAFC;
        border: 1px solid #E2E8F0;
        border-radius: 99px;
        font-size: 0.8rem;
        color: #475569;
        margin-right: 6px;
        margin-bottom: 8px;
    }

    .emp-avatar-slate {
        width: 24px;
        height: 24px;
        background: #CBD5E1;
        color: #fff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 8px;
        font-size: 0.65rem;
    }
</style>

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 font-weight-bold text-gray-800">Dashboard</h1>
            <p class="mb-0 text-muted small">Tổng quan dữ liệu nhân sự & lương thưởng</p>
        </div>
        <a href="@Url.Action("BaoCao", "BangLuong")" class="btn btn-sm btn-primary shadow-sm" style="background-color: var(--wine-primary); border-color: var(--wine-primary);">
            <i class="fas fa-file-invoice-dollar fa-sm text-white-50 mr-2"></i> Xem báo cáo chi tiết
        </a>
    </div>

    <!-- Error Check -->
    @if (Model == null)
    {
        <div class="alert alert-danger shadow-sm">
            <i class="fas fa-exclamation-triangle mr-2"></i> <strong>Lỗi:</strong> Không có dữ liệu Dashboard. Vui lòng kiểm tra HomeController.
        </div>
    }
    else
    {
        <!-- 1. Stats Cards Row -->
        <div class="row g-4 mb-4">
            <!-- Nhân sự -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card-slate border-l-blue">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-blue-slate text-uppercase mb-1">Tổng Nhân sự</div>
                                <div class="h3 mb-0 font-weight-bold text-gray-800">@Model.TotalEmployees</div>
                            </div>
                        </div>
                        <i class="fas fa-users stat-icon-bg text-blue-slate"></i>
                    </div>
                </div>
            </div>

            <!-- Hợp đồng -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card-slate border-l-emerald">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-emerald-slate text-uppercase mb-1">Hợp đồng hiệu lực</div>
                                <div class="h3 mb-0 font-weight-bold text-gray-800">@Model.TotalContracts</div>
                            </div>
                        </div>
                        <i class="fas fa-file-contract stat-icon-bg text-emerald-slate"></i>
                    </div>
                </div>
            </div>

            <!-- Chi Phụ cấp -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card-slate border-l-indigo">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-indigo-slate text-uppercase mb-1">Tổng Phụ cấp</div>
                                <div class="h4 mb-0 font-weight-bold text-gray-800">@Model.TotalAllowances.ToString("N0") <small>đ</small></div>
                            </div>
                        </div>
                        <i class="fas fa-coins stat-icon-bg text-indigo-slate"></i>
                    </div>
                </div>
            </div>

            <!-- Quỹ lương -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card-slate border-l-amber">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-amber-slate text-uppercase mb-1">Quỹ lương CB</div>
                                <div class="h4 mb-0 font-weight-bold text-gray-800">@Model.TotalSalary.ToString("N0") <small>đ</small></div>
                            </div>
                        </div>
                        <i class="fas fa-wallet stat-icon-bg text-amber-slate"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- 2. Charts Row -->
        <div class="row mb-4">
            <!-- Area Chart -->
            <div class="col-xl-8 col-lg-7">
                <div class="card shadow mb-4 h-100">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-white">
                        <h6 class="m-0 font-weight-bold text-primary">Biến động lương 12 tháng</h6>
                    </div>
                    <div class="card-body">
                        <div class="chart-container-slate">
                            <canvas id="myAreaChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pie Chart -->
            <div class="col-xl-4 col-lg-5">
                <div class="card shadow mb-4 h-100">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-white">
                        <h6 class="m-0 font-weight-bold text-primary">Cơ cấu phụ cấp</h6>
                    </div>
                    <div class="card-body">
                        <div class="chart-pie pt-4 pb-2" style="height: 250px; position: relative;">
                            <canvas id="myPieChart"></canvas>
                        </div>
                        <div class="mt-4 text-center small text-muted">
                            @if (safeAllowanceLabels.Any())
                            {
                                for (int i = 0; i < safeAllowanceLabels.Count; i++)
                                {
                                    var color = chartColors[i % chartColors.Length];
                                    <span class="mr-2">
                                        <i class="fas fa-circle" style="color: @color;"></i> @safeAllowanceLabels[i]
                                    </span>
                                }
                            }
                            else
                            {
                                <span>Chưa có dữ liệu phụ cấp</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 3. Departments Row -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 bg-white">
                        <h6 class="m-0 font-weight-bold text-primary">Nhân sự theo phòng ban</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.Departments != null && Model.Departments.Any())
                        {
                            <div class="accordion" id="pbAccordion">
                                @foreach (var pb in Model.Departments)
                                {
                                    <div class="card border-0 mb-2">
                                        <div class="card-header bg-light p-2" id="heading-@pb.DepartmentId">
                                            <h2 class="mb-0">
                                                <button class="btn btn-link btn-block text-left text-dark font-weight-bold d-flex justify-content-between align-items-center" type="button" data-toggle="collapse" data-target="#collapse-@pb.DepartmentId">
                                                    <span><i class="fas fa-building mr-2 text-gray-500"></i> @pb.DepartmentName</span>
                                                    <span class="badge badge-primary badge-pill">@pb.Count</span>
                                                </button>
                                            </h2>
                                        </div>
                                        <div id="collapse-@pb.DepartmentId" class="collapse" data-parent="#pbAccordion">
                                            <div class="card-body p-3">
                                                @if (pb.Employees.Any())
                                                {
                                                    foreach (var emp in pb.Employees)
                                                    {
                                                        var shortName = !string.IsNullOrEmpty(emp.Name) ? emp.Name.Substring(0, 1) : "U";
                                                        <div class="emp-chip-slate">
                                                            <div class="emp-avatar-slate">@shortName</div>
                                                            @emp.Name
                                                        </div>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted small font-italic">Chưa có nhân viên</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <!-- Sử dụng CDN mới nhất của Chart.js để đảm bảo tương thích -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Cấu hình chung cho Chart
            Chart.defaults.font.family = 'Inter, -apple-system, sans-serif';
            Chart.defaults.color = '#64748B';

            // Dữ liệu từ Server (Sử dụng Html.Raw để render JSON an toàn)
            var salaryLabels = @Html.Raw(Json.Encode(safeSalaryLabels));
            var salaryValues = @Html.Raw(Json.Encode(safeSalaryValues));
            var allowanceLabels = @Html.Raw(Json.Encode(safeAllowanceLabels));
            var allowanceValues = @Html.Raw(Json.Encode(safeAllowanceValues));
            var colors = @Html.Raw(Json.Encode(chartColors));

            // --- 1. AREA CHART (Lương) ---
            var ctxLine = document.getElementById("myAreaChart");
            if (ctxLine && salaryValues.length > 0) {
                var ctx = ctxLine.getContext("2d");
                // Tạo Gradient màu nền
                var gradient = ctx.createLinearGradient(0, 0, 0, 400);
                gradient.addColorStop(0, 'rgba(14, 165, 233, 0.2)'); // Xanh nhạt
                gradient.addColorStop(1, 'rgba(14, 165, 233, 0)');

                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: salaryLabels,
                        datasets: [{
                            label: "Tổng lương",
                            data: salaryValues,
                            backgroundColor: gradient,
                            borderColor: "#0EA5E9",
                            pointBackgroundColor: "#0EA5E9",
                            pointBorderColor: "#fff",
                            pointRadius: 4,
                            pointHoverRadius: 6,
                            fill: true,
                            tension: 0.3 // Đường cong mềm mại
                        }]
                    },
                    options: {
                        maintainAspectRatio: false,
                        responsive: true,
                        plugins: {
                            legend: { display: false },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return context.parsed.y.toLocaleString('vi-VN') + ' đ';
                                    }
                                }
                            }
                        },
                        scales: {
                            x: { grid: { display: false }, ticks: { color: '#94A3B8' } },
                            y: {
                                ticks: {
                                    color: '#94A3B8',
                                    callback: function(value) {
                                        if (value >= 1000000) return (value / 1000000).toFixed(0) + 'M';
                                        return value.toLocaleString('vi-VN');
                                    }
                                },
                                grid: { color: '#F1F5F9', borderDash: [5, 5] }
                            }
                        }
                    }
                });
            }

            // --- 2. PIE CHART (Phụ cấp) ---
            var ctxPie = document.getElementById("myPieChart");
            if (ctxPie && allowanceValues.length > 0) {
                new Chart(ctxPie, {
                    type: 'doughnut',
                    data: {
                        labels: allowanceLabels,
                        datasets: [{
                            data: allowanceValues,
                            backgroundColor: colors,
                            hoverOffset: 4,
                            borderWidth: 0
                        }]
                    },
                    options: {
                        maintainAspectRatio: false,
                        responsive: true,
                        cutout: '70%', // Độ rỗng giữa
                        plugins: {
                            legend: { display: false }, // Tắt legend mặc định để dùng HTML legend
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        var val = context.parsed;
                                        var total = context.dataset.data.reduce((a, b) => a + b, 0);
                                        var percent = ((val / total) * 100).toFixed(1);
                                        return context.label + ': ' + val.toLocaleString('vi-VN') + ' đ (' + percent + '%)';
                                    }
                                }
                            }
                        }
                    }
                });
            }
        });
    </script>
}