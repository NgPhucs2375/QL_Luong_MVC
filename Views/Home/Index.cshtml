@{
    ViewBag.Title = "Bảng điều khiển";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4" style="min-height:100vh;">
    <!-- Tiêu đề -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 fw-bold text-purple">Bảng điều khiển</h1>
        <a href="#" class="btn btn-gradient shadow-sm">
            <i class="fas fa-download fa-sm text-white-50 me-1"></i> Xuất báo cáo
        </a>
    </div>

    <!-- Thống kê -->
    <div class="row g-4">
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0 shadow">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-2x text-primary mb-2"></i>
                    <h6 class="text-uppercase text-secondary small">Tổng nhân viên</h6>
                    <h4 class="fw-bold text-dark">25</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0 shadow">
                <div class="card-body text-center">
                    <i class="fas fa-file-contract fa-2x text-success mb-2"></i>
                    <h6 class="text-uppercase text-secondary small">Tổng hợp đồng</h6>
                    <h4 class="fw-bold text-dark">12</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0 shadow">
                <div class="card-body text-center">
                    <i class="fas fa-hand-holding-usd fa-2x text-info mb-2"></i>
                    <h6 class="text-uppercase text-secondary small">Tổng phụ cấp</h6>
                    <h4 class="fw-bold text-dark">7</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0 shadow">
                <div class="card-body text-center">
                    <i class="fas fa-wallet fa-2x text-warning mb-2"></i>
                    <h6 class="text-uppercase text-secondary small">Tổng lương cơ bản</h6>
                    <h4 class="fw-bold text-dark">5</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Biểu đồ -->
    <div class="row mt-4">
        <div class="col-xl-8 col-lg-7">
            <div class="card border-0 shadow" style="border-radius: 15px;">
                <div class="card-header" style="background: linear-gradient(90deg, #7e57c2, #b388ff); color: white; border-radius:15px 15px 0 0;">
                    <h6 class="m-0 fw-bold"><i class="fas fa-chart-line me-2"></i>Thống kê lương theo tháng</h6>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="myAreaChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-5">
            <div class="card border-0 shadow" style="border-radius: 15px;">
                <div class="card-header" style="background: linear-gradient(90deg, #9575cd, #b39ddb); color: white; border-radius:15px 15px 0 0;">
                    <h6 class="m-0 fw-bold"><i class="fas fa-chart-pie me-2"></i>Cơ cấu phụ cấp</h6>
                </div>
                <div class="card-body text-center">
                    <canvas id="myPieChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #ede7f6, #d1c4e9, #c5cae9);
            background-attachment: fixed;
            font-family: "Segoe UI", sans-serif;
        }

        .btn-gradient {
            background: linear-gradient(90deg, #7c4dff, #b388ff);
            border: none;
            color: white;
            font-weight: 500;
            transition: 0.3s;
            border-radius: 8px;
        }

        .btn-gradient:hover {
            opacity: 0.9;
            transform: translateY(-1px);
        }

        .stat-card {
            background: #fff;
            border-radius: 15px;
            transition: 0.3s;
        }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 15px rgba(123, 97, 255, 0.2);
        }

        .text-purple {
            color: #6f42c1;
        }

        .card {
            animation: fadeIn 0.5s ease-in-out;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
}
