@model QL_Luong_MVC.ViewModel.DashBoardViewModel
@using System.Web.Helpers
@{
    ViewBag.Title = "Bảng điều khiển";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4" style="min-height:100vh;">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 fw-bold text-purple">Bảng điều khiển</h1>
        <a href="#" class="btn btn-gradient shadow-sm">
            <i class="fas fa-download fa-sm text-white-50 me-1"></i> Xuất báo cáo
        </a>
    </div>

    <div class="row g-4">
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0 shadow">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-2x text-primary mb-2"></i>
                    <h6 class="text-uppercase text-secondary small">Tổng nhân viên</h6>
                    <h4 class="fw-bold text-dark">@Model.TotalEmployees</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0 shadow">
                <div class="card-body text-center">
                    <i class="fas fa-file-contract fa-2x text-success mb-2"></i>
                    <h6 class="text-uppercase text-secondary small">Tổng hợp đồng</h6>
                    <h4 class="fw-bold text-dark">@Model.TotalContracts</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0 shadow">
                <div class="card-body text-center">
                    <i class="fas fa-hand-holding-usd fa-2x text-info mb-2"></i>
                    <h6 class="text-uppercase text-secondary small">Tổng phụ cấp</h6>
                    <h4 class="fw-bold text-dark">@Model.TotalAllowances.ToString("N0")</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0 shadow">
                <div class="card-body text-center">
                    <i class="fas fa-wallet fa-2x text-warning mb-2"></i>
                    <h6 class="text-uppercase text-secondary small">Tổng lương cơ bản</h6>
                    <h4 class="fw-bold text-dark">@Model.TotalSalary.ToString("N0")</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-xl-8 col-lg-7">
            <div class="card border-0 shadow" style="border-radius: 15px;">
                <div class="card-header" style="background: linear-gradient(90deg, #7e57c2, #b388ff); color: white; border-radius:15px 15px 0 0;">
                    <h6 class="m-0 fw-bold"><i class="fas fa-chart-line me-2"></i>Thống kê lương theo tháng</h6>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="myAreaChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-5">
            <div class="card border-0 shadow" style="border-radius: 15px;">
                <div class="card-header" style="background: linear-gradient(90deg, #9575cd, #b39ddb); color: white; border-radius:15px 15px 0 0;">
                    <h6 class="m-0 fw-bold"><i class="fas fa-chart-pie me-2"></i>Cơ cấu phụ cấp</h6>
                </div>
                <div class="card-body text-center">
                    <canvas id="myPieChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 shadow" style="border-radius: 15px;">
                <div class="card-header" style="background: linear-gradient(90deg, #6f42c1, #b388ff); color: white; border-radius:15px 15px 0 0;">
                    <h6 class="m-0 fw-bold"><i class="fas fa-sitemap me-2"></i>Phòng ban và nhân viên</h6>
                </div>
                <div class="card-body">
                    @if (Model.Departments != null && Model.Departments.Any())
                    {
                        <div class="accordion" id="pbAccordion">
                            @for (int i = 0; i < Model.Departments.Count; i++)
                            {
                                var pb = Model.Departments[i];
                                var collapseId = "pb-" + pb.DepartmentId;
                                <div class="card mb-2">
                                    <div class="card-header d-flex justify-content-between align-items-center" id="heading-@pb.DepartmentId" style="cursor:pointer;" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                                        <span class="fw-semibold"><i class="fas fa-building me-2"></i>@pb.DepartmentName</span>
                                        <span class="badge bg-primary">@pb.Count</span>
                                    </div>
                                    <div id="@collapseId" class="collapse" data-bs-parent="#pbAccordion">
                                        <div class="card-body">
                                            @if (pb.Employees.Any())
                                            {
                                                <div class="d-flex flex-wrap gap-2">
                                                    @foreach (var emp in pb.Employees)
                                                    {
                                                        <span class="badge rounded-pill text-bg-light border" style="font-size:0.95rem;">
                                                            <i class="fas fa-user me-1"></i>@emp.Name (ID: @emp.Id)
                                                        </span>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa có nhân viên.</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <span class="text-muted">Không có dữ liệu phòng ban.</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #ede7f6, #d1c4e9, #c5cae9);
            background-attachment: fixed;
            font-family: "Segoe UI", sans-serif;
        }

        .btn-gradient {
            background: linear-gradient(90deg, #7c4dff, #b388ff);
            border: none;
            color: white;
            font-weight: 500;
            transition: all 0.3s ease;
            border-radius: 10px;
            box-shadow: 0 3px 8px rgba(123, 97, 255, 0.3);
        }

        /* === BẮT ĐẦU PHẦN SỬA XUNG ĐỘT === */
        /* Giữ lại code CSS từ HEAD và xóa code HTML rác từ origin/Scu */
        .btn-gradient:hover {
            opacity: 0.9;
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 6px 16px rgba(123, 97, 255, 0.4);
        }

        .stat-card {
            background: #fff;
            border-radius: 20px;
            transition: 0.35s ease;
            border: 1px solid rgba(140, 110, 255, 0.25);
            box-shadow: 0 6px 15px rgba(123, 97, 255, 0.15);
            backdrop-filter: blur(6px);
            position: relative;
            overflow: hidden;
        }

            .stat-card::before {
                content: "";
                position: absolute;
                top: -30%;
                left: -30%;
                width: 160%;
                height: 160%;
                background: radial-gradient(circle at top left, rgba(155, 89, 182, 0.1), transparent 70%);
                z-index: 0;
            }
        /* === KẾT THÚC PHẦN SỬA XUNG ĐỘT === */

            .stat-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 10px 25px rgba(123, 97, 255, 0.25);
                border-color: rgba(123, 97, 255, 0.4);
            }

            .stat-card .card-body {
                position: relative;
                z-index: 1;
            }

        .text-purple {
            color: #5e35b1;
            text-shadow: 0 1px 3px rgba(126, 87, 194, 0.3);
        }

        .card {
            animation: fadeIn 0.6s ease-in-out;
            border-radius: 16px !important;
            border: 1px solid rgba(123, 97, 255, 0.2);
            background: rgba(255, 255, 255, 0.92);
            backdrop-filter: blur(8px);
        }

        .card-header {
            border: none;
            font-weight: 600;
            letter-spacing: 0.3px;
        }
        /* ===== Accordion ===== */
        .accordion .card-header {
            background: rgba(245, 240, 255, 0.7);
            transition: 0.3s;
        }

            .accordion .card-header:hover {
                background: rgba(230, 215, 255, 0.9);
            }

        /* ===== Biểu đồ ===== */
        .chart-area, #myPieChart {
            background: rgba(255, 255, 255, 0.7);
            border-radius: 10px;
            padding: 10px;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(15px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        (function () {
            // Data từ server
            var salaryLabels = @Html.Raw(Json.Encode(Model.SalaryByMonthLabels));
            var salaryValues = @Html.Raw(Json.Encode(Model.SalaryByMonthValues));
            var allowanceLabels = @Html.Raw(Json.Encode(Model.AllowanceLabels));
            var allowanceValues = @Html.Raw(Json.Encode(Model.AllowanceValues));

            // Line chart - Lương theo tháng
            var ctxLine = document.getElementById('myAreaChart').getContext('2d');
            new Chart(ctxLine, {
                type: 'line',
                data: {
                    labels: salaryLabels,
                    datasets: [{
                        label: 'Tổng lương (VND)',
                        data: salaryValues,
                        borderColor: '#7e57c2',
                        backgroundColor: 'rgba(126, 87, 194, 0.15)',
                        tension: 0.3,
                        fill: true,
                        pointRadius: 3,
                        pointBackgroundColor: '#7e57c2',
                        pointHoverRadius: 8,
                        pointHoverBackgroundColor: '#b388ff', // 🔥 đổi màu khi hover
                        pointBorderWidth: 2,
                        pointHoverBorderWidth: 3

                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: 'rgba(100, 50, 200, 0.9)',
                            titleFont: { weight: 'bold' },
                            padding: 10,
                            bodyFont: { size: 13 },
                            displayColors: false
                        }
                    },
                    scales: {
                        y: {
                            ticks: {
                                callback: function (value) {
                                    try { return value.toLocaleString('vi-VN'); } catch { return value; }
                                }
                            }
                        }
                    },
                    hover: {
                        mode: 'nearest',
                        intersect: true
                    }
                }
            });

            // Pie/Doughnut chart - Cơ cấu phụ cấp
            var ctxPie = document.getElementById('myPieChart').getContext('2d');
            var colors = ['#7c4dff','#b388ff','#9575cd','#a78bfa','#8c9eff','#b39ddb','#90caf9','#ce93d8','#80deea','#a5d6a7'];
            new Chart(ctxPie, {
                type: 'doughnut',
                data: {
                    labels: allowanceLabels,
                    datasets: [{
                        data: allowanceValues,
                        backgroundColor: allowanceLabels.map(function(_, i){ return colors[i % colors.length]; }),
                        borderWidth: 0,
                        hoverOffset: 20
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { position: 'bottom' },
                        labels: { padding: 15 }
                    },
                    tooltip: {
                        backgroundColor: 'rgba(90, 40, 170, 0.9)',
                        bodyFont: { size: 13 },
                        padding: 10
                    },
                    cutout: '60%',
                    animation: {
                        animateScale: true, // 🔥 làm hiệu ứng phóng to mượt
                        animateRotate: true
                    }
                }
            });
        })();
    </script>
}