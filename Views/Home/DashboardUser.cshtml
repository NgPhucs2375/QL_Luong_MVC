@{
    ViewBag.Title = "Tổng quan cá nhân";
    Layout = "~/Views/Shared/_LayoutNhanVien.cshtml";
    bool isCheckedIn = ViewBag.IsCheckedIn != null && (bool)ViewBag.IsCheckedIn;
}

<div class="row">
    <div class="col-lg-4 mb-4">
        <div class="card shadow border-0 h-100" style="background: linear-gradient(135deg, #722F37 0%, #990033 100%); color: white;">
            <div class="card-body text-center p-5">
                @if (TempData["Message"] != null)
                {
                    var type = (TempData["Type"] ?? "info").ToString();
                    <div class="alert alert-@type">@TempData["Message"]</div>
                }
                <h3 class="font-weight-bold" style="font-family: 'Playfair Display', serif;">@DateTime.Now.ToString("dd MMMM, yyyy")</h3>
                <p class="mb-4 text-white-50">Chúc bạn một ngày làm việc hiệu quả!</p>

                @if (!isCheckedIn)
                {
                    <div class="display-1 mb-3"><i class="fas fa-fingerprint text-warning"></i></div>
                    @using (Html.BeginForm("CheckIn", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-warning btn-lg rounded-pill px-5 font-weight-bold shadow-sm" style="color: #722F37;">
                            CHẤM CÔNG VÀO
                        </button>
                    }
                }
                else
                {
                    <div class="display-1 mb-3"><i class="fas fa-check-circle text-success"></i></div>
                    <button class="btn btn-light btn-lg rounded-pill px-5 font-weight-bold disabled">
                        ĐÃ ĐIỂM DANH
                    </button>
                    <p class="mt-3 small">Giờ vào: @DateTime.Now.ToString("HH:mm")</p>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Ngày công tháng này</div>
                                <div class="h3 mb-0 font-weight-bold text-gray-800">@ViewBag.SoNgayCong <span class="text-xs text-muted">/ 26</span></div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar-alt fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Tăng ca tích lũy</div>
                                <div class="h3 mb-0 font-weight-bold text-gray-800">@ViewBag.GioTangCa <span class="text-xs text-muted">giờ</span></div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-clock fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-white border-bottom-0">
                <h6 class="m-0 font-weight-bold text-primary" style="color: #722F37 !important;">Hoạt động gần đây</h6>
            </div>
            <div class="card-body">
                @{ var recents = ViewBag.RecentActivities as IEnumerable<QL_Luong_MVC.Models.BangChamCong>; }
                @if (recents != null && recents.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var item in recents)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fas fa-circle text-success text-xs mr-2"></i>
                                    @item.Day_ChamCong.ToString("dd/MM/yyyy")
                                </div>
                                <span class="badge badge-light">
                                    @item.DayCong_ChamCong công • @item.GioTangCa giờ TC
                                </span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-muted">Chưa có hoạt động gần đây.</div>
                }
            </div>
        </div>
    </div>
</div>