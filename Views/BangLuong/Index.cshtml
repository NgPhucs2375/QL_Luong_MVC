@model List<QL_Luong_MVC.Models.BangLuong>

@{
    ViewBag.Title = "Danh sách bảng lương";
    int thang = ViewBag.Thang ?? DateTime.Now.Month;
    int nam = ViewBag.Nam ?? DateTime.Now.Year;
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-file-invoice-dollar text-primary mr-2"></i>Danh sách bảng lương
    </h1>
</div>

<div class="card card-plus mb-4 border-left-primary">
    <div class="card-body py-3">
        <form method="get" action="@Url.Action("Index")" class="form-inline d-flex justify-content-between align-items-center flex-wrap">

            <div class="d-flex align-items-center mb-2 mb-lg-0">
                <label class="mr-2 font-weight-bold text-gray-700">Kỳ lương:</label>
                <select name="thang" class="form-control mr-2 custom-select" style="width: 120px;">
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i" @(i == thang ? "selected" : "")>Tháng @i</option>
                    }
                </select>

                <select name="nam" class="form-control mr-2 custom-select" style="width: 100px;">
                    @for (int y = DateTime.Now.Year; y >= 2020; y--)
                    {
                        <option value="@y" @(y == nam ? "selected" : "")>@y</option>
                    }
                </select>

                <button type="submit" class="btn btn-accent shadow-sm">
                    <i class="fas fa-filter fa-sm text-white-50"></i> Lọc
                </button>
            </div>

            <div class="mb-2 mb-lg-0">
                <a href="@Url.Action("TinhLuong")" class="btn btn-success shadow-sm mr-2">
                    <i class="fas fa-calculator fa-sm text-white-50"></i> Tính lương tháng
                </a>

                <a href="@Url.Action("BaoCao", new { thang = thang, nam = nam })" class="btn btn-info shadow-sm">
                    <i class="fas fa-chart-line fa-sm text-white-50"></i> Xem báo cáo
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card card-plus shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-white border-bottom-0">
        <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-list"></i> Dữ liệu bảng lương tháng @thang/@nam
        </h6>
        <span class="badge badge-primary badge-counter">
            @(Model != null ? Model.Count : 0) bản ghi
        </span>
    </div>

    <div class="card-body p-0">
        @if (Model != null && Model.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0" id="dataTableLuong" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th class="text-center" width="5%">STT</th>
                            <th>Mã BL</th>
                            <th>Mã NV</th>
                            <th>Thời gian</th>
                            <th class="text-right">Lương CB</th>
                            <th class="text-right">Phụ cấp</th>
                            <th class="text-right">Thưởng/Phạt</th>
                            <th class="text-center">Giờ TC</th>
                            <th class="text-right text-success font-weight-bold">Thực nhận</th>
                            <th class="text-center">#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int stt = 1;}
                        @foreach (var item in Model)
                        {
                            // Logic tính toán giữ nguyên theo code cũ của bạn
                            decimal luongThucNhan = item.LuongCoBan_BangLuong + item.TongPhuCap + item.TongThuongPhat + (item.TongGioTangCa * 50000);

                            <tr>
                                <td class="text-center">@stt</td>
                                <td><span class="badge badge-light text-secondary border">#@item.IDBangLuong</span></td>
                                <td><span class="font-weight-bold text-primary">@item.IDNhanVien_BangLuong</span></td>
                                <td>
                                    <span class="badge badge-info">T @item.Month/@item.Nam</span>
                                </td>
                                <td class="text-right">@string.Format("{0:N0}", item.LuongCoBan_BangLuong)</td>
                                <td class="text-right">@string.Format("{0:N0}", item.TongPhuCap)</td>
                                <td class="text-right">
                                    @if (item.TongThuongPhat != 0)
                                    {
                                        <span class="@(item.TongThuongPhat > 0 ? "text-success" : "text-danger")">
                                            @string.Format("{0:N0}", item.TongThuongPhat)
                                        </span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.TongGioTangCa > 0)
                                    {
                                        <span class="badge badge-warning text-dark">@item.TongGioTangCa h</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">-</span>
                                    }
                                </td>
                                <td class="text-right font-weight-bold text-success bg-light">
                                    @string.Format("{0:N0}", luongThucNhan)
                                </td>
                                <td class="text-center">
                                    <a href="#" class="btn btn-sm btn-circle btn-light text-primary" title="Chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                            stt++;
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <img src="~/Content/img/undraw_empty.svg" style="height: 120px; opacity: 0.5" alt="No data" />
                <h5 class="text-gray-500 mt-3">Không có dữ liệu bảng lương tháng @thang/@nam</h5>
                <p class="text-gray-400 mb-4">Vui lòng thực hiện tính lương trước khi xem danh sách.</p>
                <a href="@Url.Action("TinhLuong")" class="btn btn-primary btn-sm">
                    <i class="fas fa-calculator mr-1"></i> Tính lương ngay
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
             // Kích hoạt DataTables nếu có
             $('#dataTableLuong').DataTable({
                 "language": {
                     "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Vietnamese.json"
                 },
                 "pageLength": 10
             });
        });
    </script>
}