@model IEnumerable<QL_Luong_MVC.Models.PhuCap>
@{
    ViewBag.Title = "Quản lý Phụ cấp";
}

<style>
    /* Slate Theme Styles cho trang Phụ cấp */
    .border-l-indigo {
        border-left: 4px solid #6366F1 !important;
    }

    .text-indigo-slate {
        color: #6366F1 !important;
    }

    /* Button link tinh tế */
    .btn-link-slate {
        color: #475569;
        font-size: 0.85rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        padding: 4px 0;
    }

        .btn-link-slate:hover {
            color: #6366F1;
            text-decoration: none;
            transform: translateX(5px); /* Hiệu ứng trượt nhẹ sang phải */
        }

        .btn-link-slate i {
            font-size: 0.75rem;
            margin-left: auto; /* Đẩy mũi tên sang phải cùng */
        }
</style>

<div class="container-fluid py-4">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800 font-weight-bold" style="color: #1E293B !important;">Danh mục Phụ cấp</h1>
            <p class="mb-0 text-muted small">Quản lý các khoản trợ cấp cho nhân viên</p>
        </div>
        <a href="@Url.Action("Create", "PhuCap")" class="btn btn-accent shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50 mr-2"></i>Thêm phụ cấp
        </a>
    </div>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card card-plus border-l-indigo shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <!-- Loại phụ cấp -->
                                    <div class="text-xs font-weight-bold text-indigo-slate text-uppercase mb-1">
                                        @item.Loai_PhuCap
                                    </div>

                                    <!-- Số tiền -->
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @item.SoTien_PhuCap.ToString("N0") <small class="text-muted">đ</small>
                                    </div>

                                    <!-- Mã NV -->
                                    <div class="small text-gray-500 mt-2 mb-3">
                                        <i class="fas fa-user-tag mr-1"></i> NV ID: <b>@item.IDNhanVien_PhuCap</b>
                                    </div>

                                    <!-- Đường kẻ mờ ngăn cách -->
                                    <hr class="my-2" style="border-top: 1px dashed #e2e8f0;">

                                    <!-- Nút liên kết xem tổng (ĐIỀU CHỈNH MỚI) -->
                                    <a href="@Url.Action("TongPhuCap", "PhuCap", new { id = item.IDNhanVien_PhuCap })"
                                       class="btn-link-slate"
                                       title="Xem tất cả phụ cấp của nhân viên này">
                                        <span>Xem tổng hợp</span>
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </div>

                                <!-- Icon nền mờ -->
                                <div class="col-auto">
                                    <i class="fas fa-coins fa-2x text-gray-300" style="opacity: 0.3;"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-light text-center border-0 shadow-sm py-5">
                    <i class="fas fa-box-open fa-3x text-gray-300 mb-3"></i>
                    <p class="text-gray-500 mb-0 font-weight-bold">Chưa có dữ liệu phụ cấp nào.</p>
                    <p class="small text-muted">Hãy nhấn nút "Thêm phụ cấp" để bắt đầu.</p>
                </div>
            </div>
        }
    </div>
</div>