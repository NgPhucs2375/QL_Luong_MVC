@{
    ViewBag.Title = "Chi tiết phụ cấp nhân viên";
    var nv = ViewBag.NhanVien as QL_Luong_MVC.Models.NhanVien;
}

<div class="container-fluid py-4">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800 font-weight-bold">Chi tiết phụ cấp</h1>
        <a href="@Url.Action("Index")" class="btn btn-light text-primary font-weight-bold border shadow-sm">
            <i class="fas fa-arrow-left mr-1"></i> Trở về danh sách
        </a>
    </div>

    @if (nv != null)
    {
        <div class="row">
            <!-- Cột Trái: Thông tin tóm tắt -->
            <div class="col-xl-4 col-lg-5 mb-4">
                <div class="card card-plus shadow h-100">
                    <div class="card-body text-center p-5">
                        <img class="img-profile rounded-circle mb-3" src="~/Content/img/default-avatar.png" style="width: 100px; height: 100px; border: 4px solid #f8f9fc;">
                        <h4 class="font-weight-bold text-gray-800 mb-1">@nv.FullNameNhanVien</h4>
                        <p class="text-muted mb-4">ID: @nv.IDNhanVien • @ViewBag.PhongBanName</p>

                        <div class="p-3 bg-gradient-primary rounded text-white mb-3 shadow-sm">
                            <div class="small text-white-50 text-uppercase font-weight-bold">Tổng Phụ Cấp Tháng</div>
                            <div class="h2 font-weight-bold mb-0">@string.Format("{0:N0}", ViewBag.Tong) ₫</div>
                        </div>

                        <p class="small text-muted">
                            * Tổng hợp tất cả các khoản phụ cấp hiện hành đang được áp dụng cho nhân viên này.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Cột Phải: Danh sách chi tiết -->
            <div class="col-xl-8 col-lg-7 mb-4">
                <div class="card card-plus shadow h-100">
                    <div class="card-header py-3 bg-white border-bottom-0">
                        <h6 class="m-0 font-weight-bold text-primary">Các khoản mục chi tiết</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-borderless align-middle">
                                <thead class="border-bottom bg-light text-dark">
                                    <tr>
                                        <th class="pl-4">Loại phụ cấp</th>
                                        <th>Ghi chú</th>
                                        <th class="text-right pr-4">Số tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.ChiTiet != null)
                                    {
                                        foreach (var item in ViewBag.ChiTiet)
                                        {
                                            <tr class="border-bottom">
                                                <td class="pl-4 py-3 font-weight-bold text-dark">@item.Loai_PhuCap</td>
                                                <td class="py-3 text-muted small">
                                                    @* Giả sử có trường Note, nếu không có thì hiển thị mặc định *@
                                                    Theo quy định công ty
                                                </td>
                                                <td class="pr-4 py-3 text-right font-weight-bold text-success">
                                                    + @string.Format("{0:N0}", item.SoTien_PhuCap) ₫
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="3" class="text-center py-4 text-muted">Chưa có dữ liệu chi tiết.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger shadow-sm border-0">
            <i class="fas fa-times-circle mr-2"></i> Không tìm thấy thông tin nhân viên.
        </div>
    }
</div>