
@model QL_Luong_MVC.Models.PhuCap
@{ ViewBag.Title = "Sửa phụ cấp"; }

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0 font-weight-bold">Sửa khoản phụ cấp</h5>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.IDPhuCap)
                        @Html.HiddenFor(m => m.IDNhanVien_PhuCap)

                        <div class="form-group mb-3">
                            <label class="text-muted small font-weight-bold">NHÂN VIÊN THỤ HƯỞNG</label>
                            <input type="text" class="form-control bg-light" value="@ViewBag.TenNhanVien" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label class="font-weight-bold">Loại khoản <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(m => m.Loai_PhuCap, new { @class = "form-control", required = "required" })
                        </div>

                        <div class="form-group mb-4">
                            <label class="font-weight-bold">Số tiền (VNĐ) <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(m => m.SoTien_PhuCap, "{0:0}", new { @class = "form-control", type = "number", required = "required" })
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy bỏ</a>
                            <button type="submit" class="btn btn-warning font-weight-bold">Lưu thay đổi</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>