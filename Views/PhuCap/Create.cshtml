@model QL_Luong_MVC.Models.PhuCap
@{
    ViewBag.Title = "Thêm phụ cấp";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-plus shadow-sm">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0 px-4">
                    <h5 class="font-weight-bold text-gray-800">Cấp phát phụ cấp</h5>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        if (ViewBag.ThongBao != null)
                        {
                            <div class="alert alert-info">@ViewBag.ThongBao</div>
                        }

                        <div class="form-group">
                            <label class="font-weight-bold">Nhân viên</label>
                            <select name="IDNhanVien_PhuCap" class="form-control bg-light border-0">
                                @foreach (var nv in ViewBag.DSNhanVien)
                                {
                                    <option value="@nv.IDNhanVien">@nv.FullNameNhanVien - @nv.IDNhanVien</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="font-weight-bold">Loại phụ cấp</label>
                            <input type="text" name="Loai_PhuCap" class="form-control bg-light border-0" placeholder="VD: Xăng xe, Ăn trưa..." required />
                        </div>

                        <div class="form-group">
                            <label class="font-weight-bold">Số tiền</label>
                            <div class="input-group">
                                <input type="number" name="SoTien_PhuCap" class="form-control bg-light border-0" required />
                                <div class="input-group-append">
                                    <span class="input-group-text border-0 bg-light">VNĐ</span>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-accent btn-block mt-4">
                            Xác nhận thêm
                        </button>
                        <div class="text-center mt-3">
                            <a href="@Url.Action("Index")" class="small text-secondary">Quay lại danh sách</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>