@{
    ViewBag.Title = "Thêm phụ cấp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model QL_Luong_MVC.Models.PhuCap

<div class="container py-5" style="min-height:100vh;">
    <div class="card shadow-lg border-0 mx-auto" style="max-width:600px; border-radius:20px; background-color:#ffffffcc; backdrop-filter:blur(8px);">
        <div class="card-header text-center"
             style="background:linear-gradient(90deg,#7e57c2,#b388ff); color:white; border-radius:20px 20px 0 0;">
            <h4 class="mb-0"><i class="fas fa-hand-holding-usd me-2"></i>Thêm phụ cấp mới</h4>
        </div>

        <div class="card-body px-5 py-4">
            <form method="post">
                <div class="form-group mb-3">
                    <label class="fw-semibold">Nhân viên</label>
                    <select name="IDNhanVien_PhuCap" class="form-control shadow-sm" required>
                        @foreach (var nv in ViewBag.DSNhanVien)
                        {
                            <option value="@nv.IDNhanVien">@nv.FullNameNhanVien</option>
                        }
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label class="fw-semibold">Loại phụ cấp</label>
                    <input type="text" name="Loai_PhuCap" class="form-control shadow-sm" placeholder="Ví dụ: Xăng xe, Ăn trưa..." required />
                </div>

                <div class="form-group mb-4">
                    <label class="fw-semibold">Số tiền (VNĐ)</label>
                    <input type="number" name="SoTien_PhuCap" step="1000" class="form-control shadow-sm" placeholder="Nhập số tiền..." required />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-gradient px-4">
                        <i class="fas fa-save me-2"></i>Lưu phụ cấp
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary px-4 ms-2">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #ede7f6, #d1c4e9, #c5cae9);
            background-attachment: fixed;
            font-family: "Segoe UI", sans-serif;
        }

        .btn-gradient {
            background: linear-gradient(90deg, #7c4dff, #b388ff);
            border: none;
            color: white;
            font-weight: 500;
            transition: 0.3s;
            border-radius: 8px;
        }

        .btn-gradient:hover {
            opacity: 0.9;
            transform: translateY(-1px);
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ddd;
        }

        .form-control:focus {
            border-color: #a678e3;
            box-shadow: 0 0 0 0.25rem rgba(166, 120, 227, 0.25);
        }

        .card {
            animation: fadeIn 0.5s ease-in-out;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
}
