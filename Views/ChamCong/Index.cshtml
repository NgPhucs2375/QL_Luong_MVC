@model List<QL_Luong_MVC.Models.BangChamCong>

@{
    ViewBag.Title = "Quản lý Chấm công";
    int thang = ViewBag.Thang ?? DateTime.Now.Month;
    int nam = ViewBag.Nam ?? DateTime.Now.Year;
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-calendar-check text-primary mr-2"></i>Quản lý Chấm công
    </h1>
    <div>
        <a href="@Url.Action("XemGioTangCa")" class="btn btn-info shadow-sm mr-2">
            <i class="fas fa-clock fa-sm text-white-50"></i> Xem tăng ca
        </a>
        <a href="@Url.Action("Create")" class="btn btn-accent shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Chấm công mới
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="fas fa-check-circle mr-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
        <i class="fas fa-exclamation-triangle mr-2"></i> @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="card card-plus mb-4 border-left-primary">
    <div class="card-body py-3">
        <form method="get" action="@Url.Action("Index")" class="form-inline d-flex justify-content-between align-items-center flex-wrap">

            <div class="d-flex align-items-center mb-2 mb-lg-0">
                <label class="mr-2 font-weight-bold text-gray-700">Thời gian:</label>

                <select name="thang" class="form-control mr-2 custom-select shadow-sm" style="width: 120px;">
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i" @(i == thang ? "selected" : "")>Tháng @i</option>
                    }
                </select>

                <select name="nam" class="form-control mr-2 custom-select shadow-sm" style="width: 100px;">
                    @for (int y = DateTime.Now.Year; y >= 2020; y--)
                    {
                        <option value="@y" @(y == nam ? "selected" : "")>@y</option>
                    }
                </select>

                <button type="submit" class="btn btn-primary shadow-sm">
                    <i class="fas fa-filter fa-sm"></i> Lọc dữ liệu
                </button>
            </div>

            <div class="text-right d-none d-md-block">
                <span class="badge badge-success px-2 py-1 mr-1">1.0 công</span>
                <span class="badge badge-warning px-2 py-1 mr-1">0.5 công</span>
                <span class="badge badge-danger px-2 py-1">Nghỉ</span>
            </div>
        </form>
    </div>
</div>

<div class="card card-plus shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-white border-bottom-0">
        <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-list-alt"></i> Dữ liệu tháng @thang/@nam
        </h6>
        <span class="badge badge-primary badge-counter">
            @(Model != null ? Model.Count : 0) bản ghi
        </span>
    </div>
    <div class="card-body p-0">
        @if (Model != null && Model.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="tableChamCong" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th class="text-center" width="5%">STT</th>
                            <th>Mã CC</th>
                            <th>Nhân viên</th>
                            <th>Ngày chấm</th>
                            <th class="text-center">Công</th>
                            <th class="text-center">Tăng ca</th>
                            <th class="text-center" width="15%">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int stt = 1;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center align-middle">@stt</td>
                                <td class="align-middle text-gray-600">#@item.IDChamCong</td>

                                <td class="align-middle">
                                    <span class="font-weight-bold text-primary">@item.IDNhanVien_ChamCong</span>
                                </td>

                                <td class="align-middle">
                                    <i class="far fa-calendar-alt text-gray-400 mr-1"></i>
                                    @item.Day_ChamCong.ToString("dd/MM/yyyy")
                                </td>

                                <td class="text-center align-middle">
                                    @if (item.DayCong_ChamCong >= 1)
                                    {
                                        <span class="badge badge-success badge-pill px-3 shadow-sm">1.0</span>
                                    }
                                    else if (item.DayCong_ChamCong > 0)
                                    {
                                        <span class="badge badge-warning badge-pill px-3 shadow-sm">@item.DayCong_ChamCong</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger badge-pill px-3 shadow-sm">0.0</span>
                                    }
                                </td>

                                <td class="text-center align-middle">
                                    @if (item.GioTangCa > 0)
                                    {
                                        <span class="badge badge-info shadow-sm">@item.GioTangCa h</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-300">-</span>
                                    }
                                </td>

                                <td class="text-center align-middle">
                                    <a href="@Url.Action("Edit", new { id = item.IDChamCong })" class="btn btn-warning btn-sm btn-circle shadow-sm" title="Sửa">
                                        <i class="fas fa-pen"></i>
                                    </a>

                                    <button type="button" class="btn btn-danger btn-sm btn-circle shadow-sm ml-1" title="Xóa" onclick="confirmDelete(@item.IDChamCong)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                            stt++;
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <img src="~/Content/img/undraw_empty.svg" style="height: 120px; opacity: 0.5" alt="No data" />
                <h5 class="text-gray-500 mt-3">Không có dữ liệu chấm công tháng @thang/@nam</h5>
                <p class="text-gray-400">Vui lòng thêm dữ liệu mới để bắt đầu.</p>
                <a href="@Url.Action("Create")" class="btn btn-accent btn-sm mt-2 shadow-sm">
                    <i class="fas fa-plus mr-1"></i> Thêm chấm công
                </a>
            </div>
        }
    </div>
</div>

<form id="deleteForm" method="post" style="display:none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        // DataTables (Nếu có)
        $(document).ready(function() {
            if($.fn.DataTable) {
                 $('#tableChamCong').DataTable({
                     "language": { "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Vietnamese.json" },
                     "pageLength": 10
                 });
            }
        });

        // Hàm xóa an toàn
        function confirmDelete(id) {
            // Sử dụng SweetAlert nếu có, hoặc confirm mặc định của trình duyệt
            if (confirm('CẢNH BÁO: Bạn có chắc chắn muốn xóa bản ghi chấm công này không?')) {
                var form = document.getElementById('deleteForm');
                form.action = '@Url.Action("Delete", "ChamCong")/' + id;
                form.submit();
            }
        }
    </script>
}