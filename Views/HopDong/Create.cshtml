@model QL_Luong_MVC.Models.HopDong
@{
    ViewBag.Title = "Tạo hợp đồng mới";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card card-plus shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <h6 class="m-0 font-weight-bold"><i class="fas fa-pen-nib mr-2"></i>Soạn thảo hợp đồng</h6>
                </div>
                <div class="card-body p-5">

                    @if (ViewBag.ThongBao != null)
                    {
                        <div class="alert alert-warning border-left-warning shadow-sm" role="alert">
                            <i class="fas fa-exclamation-triangle mr-2"></i> @ViewBag.ThongBao
                        </div>
                    }

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-4">
                            <label class="small font-weight-bold text-gray-600">Nhân viên thụ hưởng</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-light border-0"><i class="fas fa-user"></i></span>
                                </div>
                                <select name="IDNhanVIen_HopDong" class="form-control bg-light border-0 shadow-inner h-auto py-2">
                                    @foreach (var nv in ViewBag.DSNhanVien)
                                    {
                                        <option value="@nv.IDNhanVien">@nv.FullNameNhanVien (ID: @nv.IDNhanVien)</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label class="small font-weight-bold text-gray-600">Loại hợp đồng</label>
                                    <select name="Loai_HopDong" class="form-control bg-light border-0 h-auto py-2">
                                        <option value="Có thời hạn">Có thời hạn</option>
                                        <option value="Không thời hạn">Không thời hạn</option>
                                        <option value="Thử việc">Thử việc</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label class="small font-weight-bold text-gray-600">Mức lương cơ bản (VNĐ)</label>
                                    <input type="number" name="LuongCoBan_HopDong" class="form-control bg-light border-0" placeholder="Ví dụ: 10000000" required />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label class="small font-weight-bold text-gray-600">Ngày bắt đầu</label>
                                    <input type="date" name="DayToStart" class="form-control bg-light border-0" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label class="small font-weight-bold text-gray-600">Ngày kết thúc (Nếu có)</label>
                                    <input type="date" name="DayToEnd" class="form-control bg-light border-0" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label class="small font-weight-bold text-gray-600">Ghi chú thêm</label>
                            <textarea name="Note_HopDong" class="form-control bg-light border-0" rows="3"></textarea>
                        </div>

                        <div class="text-right mt-5">
                            <a href="@Url.Action("Index")" class="btn btn-link text-secondary mr-3">Hủy bỏ</a>
                            <button type="submit" class="btn btn-accent px-5 shadow-sm">
                                <i class="fas fa-save mr-2"></i> Lưu hợp đồng
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>