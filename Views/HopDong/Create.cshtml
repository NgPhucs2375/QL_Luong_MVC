@model QL_Luong_MVC.Models.HopDong
@{
    ViewBag.Title = "Thêm hợp đồng mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4" style="min-height:100vh;">
    <div class="card shadow-lg border-0 form-card">
        <div class="card-header form-header">
            <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Thêm hợp đồng mới</h4>
        </div>

        <div class="card-body p-4">
            <form method="post">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Nhân viên</label>
                        <select name="IDNhanVIen_HopDong" class="form-select shadow-sm">
                            @foreach (var nv in ViewBag.DSNhanVien)
                            {
                                <option value="@nv.IDNhanVien">@nv.FullNameNhanVien</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Ngày bắt đầu</label>
                        <input type="date" name="DayToStart" class="form-control shadow-sm" required />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Ngày kết thúc</label>
                        <input type="date" name="DayToEnd" class="form-control shadow-sm" />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Loại hợp đồng</label>
                        <select name="Loai_HopDong" class="form-select shadow-sm">
                            <option value="Có thời hạn">Có thời hạn</option>
                            <option value="Không thời hạn">Không thời hạn</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Lương cơ bản (VNĐ)</label>
                        <input type="number" step="1000" name="LuongCoBan_HopDong" class="form-control shadow-sm" required />
                    </div>

                    <div class="col-md-12">
                        <label class="form-label fw-semibold">Ghi chú</label>
                        <textarea name="Note_HopDong" rows="3" class="form-control shadow-sm"></textarea>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-end">
                    <a href="@Url.Action("Index")" class="btn btn-secondary me-2 px-4 cancel-btn">Hủy</a>
                    <button type="submit" class="btn btn-primary px-4 save-btn">
                        <i class="fas fa-save me-2"></i> Lưu hợp đồng
                    </button>
                </div>
            </form>

            @if (ViewBag.ThongBao != null)
            {
                <div class="alert alert-danger mt-4">@ViewBag.ThongBao</div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #ede7f6, #d1c4e9, #b39ddb);
            background-attachment: fixed;
            font-family: "Segoe UI", sans-serif;
            color: #4a148c;
        }

        /* ==== Card Form ==== */
        .form-card {
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
        }

            .form-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 25px rgba(123, 31, 162, 0.15);
            }

        .form-header {
            background: linear-gradient(90deg, #7e57c2, #9575cd);
            color: white;
            border-radius: 20px 20px 0 0;
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.25);
        }

        /* ==== Form Elements ==== */
        .form-control, .form-select {
            border-radius: 10px;
            border: 1px solid #b39ddb;
            transition: all 0.2s ease;
        }

            .form-control:focus, .form-select:focus {
                box-shadow: 0 0 8px #b388ff;
                border-color: #7e57c2;
            }

        label {
            color: #512da8;
        }

        /* ==== Buttons ==== */
        .save-btn {
            background: linear-gradient(90deg, #7e57c2, #9575cd);
            border: none;
            border-radius: 10px;
            transition: all 0.25s ease;
        }

            .save-btn:hover {
                background: linear-gradient(90deg, #5e35b1, #7e57c2);
                box-shadow: 0 5px 15px rgba(94, 53, 177, 0.3);
                transform: scale(1.02);
            }

        .cancel-btn {
            border-radius: 10px;
            background: #e0e0e0;
            border: none;
            transition: all 0.2s ease;
        }

            .cancel-btn:hover {
                background: #d1c4e9;
                color: #4a148c;
            }

        .alert {
            border-radius: 10px;
            background: rgba(244, 67, 54, 0.1);
            border: 1px solid #f44336;
            color: #b71c1c;
        }
    </style>
}
