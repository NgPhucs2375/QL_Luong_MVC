@model IEnumerable<QL_Luong_MVC.Models.HopDong>
@{
    ViewBag.Title = "Quản lý Hợp đồng";
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800 font-weight-bold">Hợp đồng lao động</h1>
        <a href="@Url.Action("Create", "HopDong")" class="btn btn-accent shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50 mr-2"></i>Tạo hợp đồng mới
        </a>
    </div>

    <!-- Content Card -->
    <div class="card card-plus shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-white border-bottom-0">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách hợp đồng</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Mã HĐ</th>
                            <th>Mã NV</th>
                            <th>Loại Hợp Đồng</th>
                            <th>Ngày Bắt Đầu</th>
                            <th>Ngày Kết Thúc</th>
                            <th>Lương CB</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                // Logic tính trạng thái hiển thị
                                bool isExpired = item.DayToEnd.HasValue && item.DayToEnd.Value < DateTime.Now;
                                string badgeClass = isExpired ? "badge-danger" : "badge-success";
                                string statusText = isExpired ? "Hết hạn" : "Hiệu lực";
                                if (item.Loai_HopDong.Contains("Không thời hạn"))
                                {
                                    badgeClass = "badge-info"; statusText = "Vĩnh viễn";
                                }

                                <tr>
                                    <td class="font-weight-bold text-primary">#@item.IDHopDong</td>
                                    <td>
                                        <a href="@Url.Action("InfoNV", "NhanVien", new { id = item.IDNhanVIen_HopDong })" class="text-dark font-weight-bold text-decoration-none">
                                            <i class="fas fa-user-tag mr-1 text-gray-400"></i> @item.IDNhanVIen_HopDong
                                        </a>
                                    </td>
                                    <td>@item.Loai_HopDong</td>
                                    <td>@item.DayToStart.ToString("dd/MM/yyyy")</td>
                                    <td>@(item.DayToEnd.HasValue ? item.DayToEnd.Value.ToString("dd/MM/yyyy") : "--")</td>
                                    <td class="font-weight-bold text-success">@item.LuongCoBan_HopDong.ToString("N0") ₫</td>
                                    <td>
                                        <span class="badge badge-pill @badgeClass px-3 py-2">@statusText</span>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5 text-muted">
                                    <i class="fas fa-file-signature fa-3x mb-3 text-gray-300"></i><br />
                                    Chưa có dữ liệu hợp đồng.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>