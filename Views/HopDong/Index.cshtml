
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<QL_Luong_MVC.Models.HopDong>
@{
    ViewBag.Title = "Danh sách hợp đồng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Danh sách hợp đồng</h2>
<a href="@Url.Action("Create","HopDong")" class="btn btn-primary mb-3">+ Thêm hợp đồng</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã HD</th>
            <th>Nhân viên</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            <th>Loại</th>
            <th>Lương cơ bản</th>
            <th>Ghi chú</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IDHopDong</td>
                <td>@item.IDNhanVIen_HopDong</td>
                <td>@item.DayToStart.ToShortDateString()</td>
                <td>@item.DayToEnd.ToShortDateString()</td>
                <td>@item.Loai_HopDong</td>
                <td>@item.LuongCoBan_HopDong.ToString("N0")</td>
                <td>@item.Note_HopDong</td>
            </tr>
        }
    </tbody>
</table>
