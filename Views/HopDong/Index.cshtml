@model IEnumerable<QL_Luong_MVC.Models.HopDong>
@{
    ViewBag.Title = "Danh sách hợp đồng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="purple-theme">
    <div class="container-fluid py-4" style="min-height:100vh;">
        <div class="card shadow-lg border-0 list-card">
            <div class="card-header d-flex justify-content-between align-items-center header-purple">
                <h4 class="mb-0"><i class="fas fa-file-contract me-2"></i>Danh sách hợp đồng</h4>
                <a href="@Url.Action("Create", "HopDong")" class="btn add-btn shadow-sm">
                    <i class="fas fa-plus-circle me-1"></i> Thêm hợp đồng
                </a>
            </div>

            <div class="card-body bg-white p-4 table-container">
                <table class="table table-hover text-center align-middle mb-0" id="hopdongTable">
                    <thead class="table-header">
                        <tr>
                            <th>Mã HD</th>
                            <th>Nhân viên</th>
                            <th>Ngày bắt đầu</th>
                            <th>Ngày kết thúc</th>
                            <th>Loại</th>
                            <th>Lương cơ bản (VNĐ)</th>
                            <th>Ghi chú</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.IDHopDong</strong></td>
                                    <td>@item.IDNhanVIen_HopDong</td>
                                    <td>@item.DayToStart.ToString("dd/MM/yyyy")</td>
                                    <td>@(item.DayToEnd.HasValue ? item.DayToEnd.Value.ToString("dd/MM/yyyy") : "—")</td>
                                    <td>
                                        @if (item.Loai_HopDong == "Có thời hạn")
                                        {
                                            <span class="badge badge-purple">Có thời hạn</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-green">Không thời hạn</span>
                                        }
                                    </td>
                                    <td class="text-end">@item.LuongCoBan_HopDong.ToString("N0")</td>
                                    <td>@item.Note_HopDong</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-muted py-4">
                                    <i class="fas fa-info-circle me-2"></i>Không có dữ liệu hợp đồng.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

@section Styles {
    <style>
        /* ==== Tổng thể ==== */
        body {
            background: linear-gradient(135deg, #ede7f6, #d1c4e9, #c5cae9);
            background-attachment: fixed;
            font-family: "Segoe UI", sans-serif;
            color: #4a148c;
        }

        .purple-theme {
            background: linear-gradient(135deg, #d9c2ff, #c7b6ff, #b8a4ff) !important;
        }

        .list-card {
            border-radius: 18px;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
            animation: fadeIn 0.5s ease-in-out;
        }

            .list-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 25px rgba(111, 66, 193, 0.2);
            }

        /* ==== Header ==== */
        .header-purple {
            background: linear-gradient(90deg, #7e57c2, #9575cd);
            color: #fff;
            border-radius: 18px 18px 0 0;
            text-shadow: 0 1px 2px rgba(0,0,0,0.25);
        }

        /* ==== Table ==== */
        .table-container {
            border-radius: 0 0 18px 18px;
        }

        .table-header {
            background: linear-gradient(90deg, #8e63d1, #b78dfc);
            color: white;
        }

        .table-hover tbody tr:hover {
            background: rgba(155, 120, 255, 0.12) !important;
            transform: scale(1.01);
            transition: all 0.25s ease;
        }

        /* ==== Badge ==== */
        .badge-purple {
            background: linear-gradient(90deg, #8e63d1, #b388ff);
            color: white;
            border-radius: 10px;
            padding: 6px 12px;
            font-weight: 500;
        }

        .badge-green {
            background: linear-gradient(90deg, #9575cd, #b39ddb);
            color: white;
            border-radius: 10px;
            padding: 6px 12px;
            font-weight: 500;
        }

        /* ==== Button ==== */
        .add-btn {
            background: linear-gradient(90deg, #ffffff, #f3e8ff);
            color: #4a148c;
            font-weight: 600;
            border-radius: 10px;
            transition: all 0.25s ease;
        }

            .add-btn:hover {
                background: linear-gradient(90deg, #e1d0ff, #f0e0ff);
                color: #311b92;
                transform: scale(1.05);
                box-shadow: 0 4px 12px rgba(94, 53, 177, 0.25);
            }

        /* ==== Hiệu ứng nhẹ ==== */
        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at top left, #f3e5f5 0%, transparent 60%), radial-gradient(circle at bottom right, #ede7f6 0%, transparent 60%);
            z-index: -1;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}
