
@model QL_Luong_MVC.Models.HopDong
@{ ViewBag.Title = "Điều chỉnh Hợp đồng"; }

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-left-primary">
                <div class="card-header bg-white">
                    <h5 class="m-0 font-weight-bold text-primary">Điều chỉnh hợp đồng lao động</h5>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.IDHopDong)
                        @Html.HiddenFor(m => m.IDNhanVIen_HopDong)

                        <div class="alert alert-light border">
                            <i class="fas fa-user-tie mr-2"></i> Nhân viên: <strong>@ViewBag.TenNhanVien</strong>
                        </div>

                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="font-weight-bold">Loại hợp đồng</label>
                                <select name="Loai_HopDong" class="form-control">
                                    <option value="Có thời hạn" @(Model.Loai_HopDong == "Có thời hạn" ? "selected" : "")>Có thời hạn</option>
                                    <option value="Không thời hạn" @(Model.Loai_HopDong == "Không thời hạn" ? "selected" : "")>Không thời hạn</option>
                                </select>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="font-weight-bold">Mức lương cơ bản (VNĐ)</label>
                                @Html.TextBoxFor(m => m.LuongCoBan_HopDong, "{0:0}", new { @class = "form-control font-weight-bold text-success", type = "number" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="font-weight-bold">Ngày hiệu lực</label>
                                @Html.TextBoxFor(m => m.DayToStart, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="font-weight-bold">Ngày hết hạn (Bỏ trống nếu vô thời hạn)</label>
                                @Html.TextBoxFor(m => m.DayToEnd, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Ghi chú / Điều khoản bổ sung</label>
                            @Html.TextAreaFor(m => m.Note_HopDong, new { @class = "form-control", rows = "3" })
                        </div>

                        <hr />
                        <div class="d-flex justify-content-end">
                            <a href="@Url.Action("Index")" class="btn btn-secondary mr-2">Hủy bỏ</a>
                            <button type="submit" class="btn btn-primary font-weight-bold"><i class="fas fa-save mr-1"></i> Lưu thay đổi</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>